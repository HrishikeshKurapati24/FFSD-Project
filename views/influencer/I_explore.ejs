      <div class="brand-item">
        <img style="border-radius: 50%; width: 100px;" src="/i_index/boat.png" alt="Brand 2">
        <div class="brand-details">
          <h2>Boat</h2>
          <p>Fields of Operation: Technology, Gadgets</p>
        </div>
        <button class="collab-button">Request Collab</button>
      </div>
      <!-- Brand Item -->
      <div class="brand-item">
        <img style="border-radius: 50%; width: 100px;" src="/i_index/garnier.jpg" alt="Brand 3">
        <div class="brand-details">
          <h2>Garnier</h2>
          <p>Fields of Operation: Men's fasion, grooming</p>
        </div>
        <button class="collab-button">Request Collab</button>
