      <!-- Brand Item -->
      <div class="brand-item">
        <img style="border-radius: 50%; width: 100px;" src="/i_index/fair-and-lovely.png" alt="Brand 4">
        <div class="brand-details">
          <h2>Fair and Lovely</h2>
          <p>Fields of Operation: Fashion, Lifestyle</p>
        </div>
        <button class="collab-button">Request Collab</button>
      </div>
      <!-- Brand Item -->
      <div class="brand-item">
        <img style="border-radius: 50%; width: 100px;" src="/i_index/canon.png" alt="Brand 5">
        <div class="brand-details">
          <h2>Canon</h2>
          <p>Fields of Operation: Photography</p>
        </div>
        <button class="collab-button">Request Collab</button>
      </div>
    </div>
  </div>

  <!-- This script handles the sidebar toggle. -->
  <script>
    function openMenu() {
      document.getElementById("navMenu").style.width = "250px";
    }
    function closeMenu() {
      document.getElementById("navMenu").style.width = "0";
    }
  </script>
  
  <script>
    function toggleLayout() {
      const brandList = document.getElementById('brandList');
      brandList.classList.toggle('grid');
    }
  </script>
