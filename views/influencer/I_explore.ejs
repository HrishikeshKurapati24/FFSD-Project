<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Explore Brands - CollabSync</title>
  <link rel="stylesheet" href="/i_index/I_explore.css">
</head>

<body>
  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">CollabSync</div>
      <nav>
        <ul>
          <li><a href="/influencer/home">Home</a></li>
          <li><a href="/influencer/explore">Explore brands</a></li>
          <li><a href="/influencer/profile">My Profile</a></li>
          <!-- <li><a href="logout">Logout</a></li> -->
        </ul>
      </nav>
    </div>
  </header>

  <!-- Sidebar Navigation (Right Side) -->
  <button class="toggle-btn" onclick="openMenu()">â˜°</button>
  <div class="menu" id="navMenu">
    <span class="close-btn" onclick="closeMenu()">&times;</span>
    <!-- <a href="#">Influencers</a> -->
    <a href="/influencer/collab">Collabs</a>
    <a href="/">Sign Out</a>
    <!-- <a href="#">Settings</a> -->
  </div>
  </div>

  <!-- Main Content -->
  <div class="container">
    <div class="intro">
      <h1>Explore Brands</h1>
      <p>Connect with top brands to elevate your collaboration opportunities.</p>
    </div>

    <!-- Toggle Button -->
    <div class="toggle-container">
      <button class="toggle-button" onclick="toggleLayout()">Toggle Layout</button>
    </div>

    <!-- Brand List -->
    <div class="brand-list" id="brandList">
      <% brands.forEach(function(brand) { %>
        <!-- Brand Item -->
        <div class="brand-item">
          <img style="border-radius: 50%; width: 100px;" src="<%= brand.image %>" alt="<%= brand.name %>">
          <div class="brand-details">
            <h2>
              <%= brand.name %>
            </h2>
            <p>Fields of Operation: <%= brand.fields %>
            </p>
          </div>
          <button class="collab-button">Request Collab</button>
        </div>
        <% }); %>
    </div>

    <!-- This script handles the sidebar toggle. -->
    <script>
      function openMenu() {
        document.getElementById("navMenu").style.width = "250px";
      }
      function closeMenu() {
        document.getElementById("navMenu").style.width = "0";
      }
    </script>

    <script>
      function toggleLayout() {
        const brandList = document.getElementById('brandList');
        brandList.classList.toggle('grid');
      }
    </script>
</body>

</html>