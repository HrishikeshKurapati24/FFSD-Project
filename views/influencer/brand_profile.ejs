<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= brand.displayName %> - CollabSync
    </title>
    <link rel="stylesheet" href="/i_index/brand_profile.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="profile-header">
        <div class="profile-content">
            <a href="#" class="back-button" onclick="handleBack(event)" aria-label="Go back to explore brands">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
            <div class="profile-header-content">
                <img src="<%= brand.profilePicUrl %>" alt="<%= brand.displayName %>" class="profile-pic">
                <div class="profile-info">
                    <h1 class="profile-name">
                        <%= brand.displayName || brand.fullName || 'Unknown Brand' %>
                            <% if (brand.verified) { %>
                                <i class="fas fa-check-circle verified-badge"></i>
                                <% } %>
                    </h1>
                    <p class="profile-username">@<%= brand.username || 'unknown' %>
                    </p>
                    <p class="profile-bio">
                        <%= brand.bio || 'No description available' %>
                    </p>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (brand.totalFollowers || 0).toLocaleString() %>
                            </div>
                            <div class="stat-label">Total Audience</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (brand.avgEngagementRate || 0).toFixed(1) %>%
                            </div>
                            <div class="stat-label">Avg. Engagement</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= brand.completedCollabs || 0 %>
                            </div>
                            <div class="stat-label">Campaigns</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (brand.rating || 0).toFixed(1) %>‚≠ê
                            </div>
                            <div class="stat-label">Rating</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-details">
            <div class="main-content">
                <div class="detail-card">
                    <h2 class="card-title">Social Media Platforms</h2>
                    <div class="social-platforms">
                        <% if (brand.socials && brand.socials.length> 0) { %>
                            <% brand.socials.forEach(social=> { %>
                                <div class="platform-card">
                                    <div class="platform-header">
                                        <div
                                            class="platform-icon <%= (social.platform || 'default').toLowerCase() %>-bg">
                                            <i class="fab fa-<%= social.icon || 'link' %>"></i>
                                        </div>
                                        <div class="platform-name">
                                            <%= social.name || social.platform || 'Unknown Platform' %>
                                        </div>
                                    </div>
                                    <div class="platform-stats">
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.followers || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Followers</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgLikes || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Likes</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgComments || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Comments</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgViews || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Views</div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No social media platforms connected</p>
                                        <% } %>
            </div>
                </div>

                <div class="detail-card">
                    <h2 class="card-title">Top Campaigns</h2>
                    <div class="best-posts">
                        <% if (brand.bestPosts && brand.bestPosts.length> 0) { %>
                            <% brand.bestPosts.forEach(post=> { %>
                                <div class="post-card">
                                    <img src="<%= post.thumbnail || '/images/default-campaign.jpg' %>"
                                        alt="Campaign thumbnail" class="post-image">
                                    <div class="post-details">
                                        <div class="post-platform">
                                            <i class="fab fa-<%= (post.platform || 'link').toLowerCase() %>"></i>
                                            <%= post.title %>
                                        </div>
                                        <div class="post-stats">
                                            <span><i class="fas fa-heart"></i>
                                                <%= (post.likes || 0).toLocaleString() %>
                                            </span>
                                            <span><i class="fas fa-comment"></i>
                                                <%= (post.comments || 0).toLocaleString() %>
                            </span>
                                            <% if (post.views) { %>
                                                <span><i class="fas fa-eye"></i>
                                                    <%= (post.views || 0).toLocaleString() %>
                                </span>
                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No campaigns available to display</p>
                                                                    <% } %>
                    </div>
                </div>
            </div>

            <div class="side-content">
                <div class="detail-card">
                    <h2 class="card-title">Brand Information</h2>
                    <div class="brand-info-section">
                        <% if (brand.location) { %>
                            <div class="info-item">
                                <div class="info-icon">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="info-content">
                                    <div class="info-label">Location</div>
                                    <div class="info-value">
                                        <%= brand.location %>
                                    </div>
                        </div>
                            </div>
                            <% } %>

                                <% if (brand.website) { %>
                                    <div class="info-item">
                                        <div class="info-icon">
                                            <i class="fas fa-globe"></i>
                                        </div>
                                        <div class="info-content">
                                            <div class="info-label">Website</div>
                                            <div class="info-value">
                                                <a href="<%= brand.website %>" target="_blank" class="website-link">
                                                    <%= brand.website.replace(/^https?:\/\//, '' ) %>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>

                                        <% if (brand.mission && brand.mission !==brand.bio) { %>
                                            <div class="info-item">
                                                <div class="info-icon">
                                                    <i class="fas fa-bullseye"></i>
                                                </div>
                                                <div class="info-content">
                                                    <div class="info-label">Mission</div>
                                                    <div class="info-value">
                                                        <%= brand.mission %>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                    </div>

                    <div class="audience-section">
                        <h3>Target Audience</h3>
                        <div class="audience-stats">
                            <div class="audience-stat">
                                <div class="audience-stat-value">
                                    <%= brand.audienceDemographics?.gender || 'Mixed' %>
                                </div>
                                <div class="audience-stat-label">Primary Gender</div>
                            </div>
                            <div class="audience-stat">
                                <div class="audience-stat-value">
                                    <%= brand.audienceDemographics?.ageRange || '18-45' %>
                                </div>
                                <div class="audience-stat-label">Age Range</div>
                                            </div>
                                        </div>
                    </div>

                    <div class="performance-metrics">
                        <h3>Performance Metrics</h3>
                        <div class="metric-grid">
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (brand.performanceMetrics?.reach || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Reach</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (brand.performanceMetrics?.impressions || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Impressions</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (brand.performanceMetrics?.engagement || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Engagement</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (brand.performanceMetrics?.conversionRate || 0).toFixed(1) %>%
                                </div>
                                <div class="metric-label">Conversion Rate</div>
                            </div>
                        </div>
                    </div>

                    <div class="categories-section">
                    <h3>Brand Categories</h3>
                    <div class="category-tags">
                            <% if (brand.categories && brand.categories.length> 0) { %>
                        <% brand.categories.forEach(category=> { %>
                                    <span class="category-tag">
                                <%= category %>
                            </span>
                            <% }); %>
                                        <% } else { %>
                                            <p>No categories specified</p>
                                            <% } %>
                        </div>
                        </div>

                    <div class="languages-section">
                        <h3>Languages</h3>
                        <div class="language-tags">
                            <% if (brand.languages && brand.languages.length> 0) { %>
                                <% brand.languages.forEach(language=> { %>
                                    <span class="language-tag">
                                        <%= language %>
                                        </span>
                                        <% }); %>
                                            <% } else { %>
                                            <p>No languages specified</p>
                                                <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function handleBack(e) {
            e.preventDefault();
            const ref = document.referrer;

            // Check if referrer is from the same origin
            if (ref && new URL(ref, window.location.origin).origin === window.location.origin) {
                window.location.href = ref;
                return;
            }

            // If history exists, go back
            if (window.history.length > 1) {
                window.history.back();
                return;
            }

            // Default fallback: go to explore brands page
            window.location.href = '/influencer/explore';
        }
    </script>
</body>

</html>