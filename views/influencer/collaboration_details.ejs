<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campaign Details - CollabSync</title>
    <link rel="stylesheet" href="/i_index/collaboration_details.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <div class="logo">CollabSync</div>
            <nav>
                <ul>
                    <li><a href="/influencer/home">Home</a></li>
                    <li><a href="/influencer/explore">Explore Brands</a></li>
                    <li><a href="/influencer/profile">My Profile</a></li>
                </ul>
            </nav>
        </div>

        <!-- Sidebar Navigation (Right Side) -->
        <button class="toggle-btn" onclick="openMenu()">â˜°</button>
        <div class="menu" id="navMenu">
            <span class="close-btn" onclick="closeMenu()">&times;</span>
            <a href="/influencer/collab">Collabs</a>
            <a href="/influencer/signout">Sign Out</a>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="campaign-details">
            <div class="campaign-header">
                <div class="brand-info">
                    <img src="<%= collab.brand_logo %>" alt="<%= collab.brand_name %>" class="brand-logo">
                    <div class="brand-details">
                        <h1>
                            <%= collab.title %>
                        </h1>
                        <p class="brand-name">
                            <%= collab.brand_name %>
                        </p>
                    </div>
                </div>
                <div class="status-badge <%= collab.status %>">
                    <%= collab.status %>
                </div>
            </div>

            <div class="campaign-grid">
                <div class="detail-section">
                    <h3>Campaign Overview</h3>
                    <div class="detail-item">
                        <span class="label">Description:</span>
                        <span class="value">
                            <%= collab.description %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Objectives:</span>
                        <span class="value">
                            <%= collab.objectives %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Target Audience:</span>
                        <span class="value">
                            <%= collab.target_audience %>
                        </span>
                    </div>
                </div>

                <div class="detail-section">
                    <h3>Campaign Details</h3>
                    <div class="detail-item">
                        <span class="label">Duration:</span>
                        <span class="value">
                            <%= collab.duration %> days
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Budget:</span>
                        <span class="value">
                            <%= collab.budget.toLocaleString() %> Rupees
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Start Date:</span>
                        <span class="value">
                            <%= new Date(collab.start_date).toLocaleDateString() %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">End Date:</span>
                        <span class="value">
                            <%= new Date(collab.end_date).toLocaleDateString() %>
                        </span>
                    </div>
                </div>

                <div class="detail-section">
                    <h3>Requirements</h3>
                    <div class="detail-item">
                        <span class="label">Minimum Followers:</span>
                        <span class="value">
                            <%= collab.min_followers.toLocaleString() %>
                        </span>
                    </div>
                    <div class="detail-item">
                        <span class="label">Required Channels:</span>
                        <div class="channels-list">
                            <% collab.required_channels.forEach(channel=> { %>
                                <span class="channel-badge">
                                    <%= channel %>
                                </span>
                                <% }); %>
                        </div>
                    </div>
                    <% if (typeof isEligible !=='undefined' && !isEligible) { %>
                        <div class="detail-item unmet-requirements">
                            <span class="label unmet-label">Unmet Requirements:</span>
                            <ul class="unmet-list">
                                <% unmetRequirements.forEach(msg=> { %>
                                    <li>
                                        <%= msg %>
                                    </li>
                                    <% }); %>
                            </ul>
                        </div>
                        <% } %>
                </div>

                <!-- Products Section -->
                <% if (collab.products && collab.products.length> 0) { %>
                    <div class="detail-section products-section">
                        <h3>Campaign Products</h3>
                        <div class="products-intro">
                            <p><i class="fas fa-info-circle"></i> <strong>These are the products you will be promoting
                                    in this campaign. A sample will be sent to you after approval of request.</strong></p>
                        </div>
                        <div class="products-grid">
                            <% collab.products.forEach(product=> { %>
                                <div class="product-card">
                                    <div class="product-image">
                                        <% // Get the primary image or first image from the images array const
                                            productImage=product.images && product.images.length> 0
                                            ? (product.images.find(img => img.is_primary) || product.images[0])
                                            : null;
                                            const imageUrl = productImage ? productImage.url : null;
                                            %>
                                            <% if (imageUrl && imageUrl.trim() !=='' ) { %>
                                                <img src="<%= imageUrl %>" alt="<%= product.name %>" class="product-img"
                                                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                                                    onload="console.log('Image loaded successfully:', '<%= imageUrl %>');">
                                                <div class="product-placeholder" style="display: none;">
                                                    <i class="fas fa-box"></i>
                                                    <span>Image Failed to Load</span>
                                                    <small
                                                        style="display: block; margin-top: 0.5rem; font-size: 0.7rem; color: #999;">
                                                        URL: <%= imageUrl %>
                                                    </small>
                                                </div>
                                                <% } else { %>
                                                    <div class="product-placeholder">
                                                        <i class="fas fa-box"></i>
                                                        <span>No Image</span>
                                                    </div>
                                                    <% } %>
                                    </div>
                                    <div class="product-details">
                                        <h4 class="product-name">
                                            <%= product.name %>
                                        </h4>
                                        <div class="product-category">
                                            <span class="category-badge">
                                                <%= product.category %>
                                            </span>
                                        </div>
                                        <div class="product-pricing">
                                            <div class="price-row">
                                                <span class="price-label">Original Price:</span>
                                                <span class="original-price">$<%= product.original_price %></span>
                                            </div>
                                            <div class="price-row">
                                                <span class="price-label">Campaign Price:</span>
                                                <span class="campaign-price">$<%= product.campaign_price %></span>
                                            </div>
                                            <% if (product.discount_percentage) { %>
                                                <div class="discount-badge">
                                                    <%= product.discount_percentage %>% OFF
                                                </div>
                                                <% } %>
                                        </div>
                                        <div class="product-description">
                                            <p>
                                                <%= product.description %>
                                            </p>
                                        </div>
                                        <% if (product.special_instructions) { %>
                                            <div class="special-instructions">
                                                <h5>Special Instructions:</h5>
                                                <p>
                                                    <%= product.special_instructions %>
                                                </p>
                                            </div>
                                            <% } %>
                                    </div>
                                </div>
                                <% }); %>
                        </div>
                    </div>
                    <% } %>
            </div>

            <div class="action-buttons">
                <% if (applicationStatus==='request' ) { %>
                    <button class="btn btn-secondary" disabled>
                        <i class="fas fa-check"></i> Applied for Campaign
                    </button>
                    <% }else if(applicationStatus==='active' ){ %>
                        <button class="btn btn-secondary" disabled>
                            <i class="fas fa-check"></i>Application already accepted
                        </button>
                        <% } else { %>
                            <div class="action-input-group">
                                <input type="text" id="specialMessage" placeholder="Add a message to brand (optional)" class="message-input" />
                                <button class="btn btn-primary" onclick="applyForCampaign('<%= collab._id %>')"
                                    <%=(typeof isEligible !=='undefined' && !isEligible) ? 'disabled' : '' %>>
                                    <i class="fas fa-check"></i> Apply For Campaign
                                </button>
                            </div>
                            <% } %>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>CollabSync</h3>
                <p>Connecting brands with influencers for successful collaborations.</p>
            </div>
            <div class="footer-section">
                <h3>Quick Links</h3>
                <ul>
                    <li><a href="/influencer/home">Home</a></li>
                    <li><a href="/influencer/explore">Explore Brands</a></li>
                    <li><a href="/influencer/profile">My Profile</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Support</h3>
                <ul>
                    <li><a href="#">Help Center</a></li>
                    <li><a href="#">Contact Us</a></li>
                    <li><a href="#">Privacy Policy</a></li>
                </ul>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2025 CollabSync. All rights reserved.</p>
        </div>
    </footer>

    <script>
        function openMenu() {
            document.getElementById("navMenu").style.width = "250px";
        }
        function closeMenu() {
            document.getElementById("navMenu").style.width = "0";
        }

        // New functions for applying for campaigns
        async function applyForCampaign(campaignId) {
            try {
                const msg = document.getElementById('specialMessage')?.value || '';
                const response = await fetch(`/influencer/apply/${campaignId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                    , body: JSON.stringify({ message: msg })
                });

                const data = await response.json();
                if (data.success) {
                    alert('Application submitted successfully!');
                    window.location.reload();
                } else {
                    // Check if subscription is expired
                    if (data.expired && data.redirectUrl) {
                        if (confirm(data.message + '\n\nWould you like to renew your subscription now?')) {
                            window.location.href = data.redirectUrl;
                        }
                    } else {
                        alert('Failed to submit application: ' + data.message);
                    }
                }
            } catch (error) {
                console.error('Error submitting application:', error);
                alert('An error occurred while submitting the application');
            }
        }
    </script>
</body>

</html>