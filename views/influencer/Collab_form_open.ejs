<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Brand Collaboration Details - CollabSync</title>
    <link rel="stylesheet" href="/i_index/Collab_form_open.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>

<body>

    <!-- Header -->
    <header>
        <div class="header-container">
            <div class="logo">CollabSync</div>
            <nav>
                <ul>
                    <li><a href="/influencer/home">Home</a></li>
                    <li><a href="/influencer/explore">Explore Brands</a></li>
                    <li><a href="/influencer/explore">My Profile</a></li>
                    <!-- <li><a href="logout">Logout</a></li> -->
                </ul>
            </nav>
        </div>
    </header>

    <!-- Sidebar Navigation (Right Side) -->
    <button class="toggle-btn" onclick="openMenu()">â˜°</button>
    <div class="menu" id="navMenu">
        <span class="close-btn" onclick="closeMenu()">&times;</span>
        <!-- <a href="/I_explore">Brands</a> //////////////////////////////////////////////////////////////////////////////////////////////////////-->
        <a href="/influencer/collab">Collabs</a>
        <!-- <a href="/Create_collab">Create Collab</a> -->
        <a href="/">Sign Out</a>
        <!-- <a href="#">Settings</a> -->

    </div>
    <div class="container">
        <div class="brand-detail-container">
          <div class="back-button">
            <a href="javascript:history.back()">
              <i class="fas fa-arrow-left"></i> Back to All Collabs
            </a>
          </div>
          
          <div class="brand-detail-header">
            <div class="brand-logo">
              <img src="<%= collab.brand_logo_url %>" alt="<%= collab.brand_name %>">
            </div>
            <div class="brand-header-info">
              <h1><%= collab.brand_name %></h1>
              <span class="brand-tagline"><%= collab.tagline %></span>
              <div class="brand-verification">
                <i class="fa-solid fa-circle-check"></i> Verified Brand
              </div>
            </div>
          </div>
          
          <div class="brand-detail-content">
            <div class="detail-sidebar">
              <div class="sidebar-section">
                <h3><i class="fas fa-info-circle"></i> Brand Overview</h3>
                <p>Founded in <%= collab.founded_year %></p>
                <p>Location: <%= collab.location %></p>
                <p>Website: <a href="<%= collab.website %>" target="_blank"><%= collab.website %></a></p>
              </div>
              
              <div class="sidebar-section">
                <h3><i class="fas fa-bullseye"></i> Collaboration Criteria</h3>
                <div class="criteria-item">
                  <h4><i class="fas fa-globe-americas"></i> Target Regions</h4>
                  <div class="tags-container">
                    <% collab.influence_regions.split(' ').forEach(region => { %>
                      <span class="tag"><%= region %></span>
                    <% }); %>
                  </div>
                </div>
                <div class="criteria-item">
                  <h4><i class="fas fa-users"></i> Audience Demographics</h4>
                  <div class="tags-container">
                    <span class="tag">Age: <%= collab.age_group %></span>
                    <span class="tag">Genders: <%= collab.genders %></span>
                  </div>
                </div>
                <div class="criteria-item">
                  <h4><i class="fas fa-hashtag"></i> Content Categories</h4>
                  <div class="tags-container">
                    <% collab.interests.split(',').forEach(interest => { %>
                      <span class="tag"><%= interest.trim() %></span>
                    <% }); %>
                  </div>
                </div>
              </div>
              
              <div class="sidebar-section compensation-info">
                <h3><i class="fas fa-hand-holding-usd"></i> Compensation</h3>
                <div class="compensation-item">
                  <span class="label">Pay-per-post:</span>
                  <span class="value"><%= collab.pay_per_post %></span>
                </div>
                <div class="compensation-item">
                  <span class="label">Commission:</span>
                  <span class="value"><%= collab.commission %></span>
                </div>
              </div>
            </div>
            
            <div class="detail-main">
              <div class="main-section">
                <h2>About <%= collab.brand_name %></h2>
                <p><%= collab.about %></p>
              </div>
              
              <div class="main-section">
                <h2>Current Campaign: "<%= collab.campaign_name %>"</h2>
                <p><%= collab.campaign_description %></p>
                <h3>Campaign Goals:</h3>
                <ul>
                  <% collab.campaign_goals.split('|').forEach(goal => { %>
                    <li><%= goal %></li>
                  <% }); %>
                </ul>
                <h3>What We're Looking For:</h3>
                <ul>
                  <% collab.content_requirements.split('|').forEach(req => { %>
                    <li><%= req %></li>
                  <% }); %>
                </ul>
              </div>
              
              <div class="main-section">
                <h2>Platform Requirements</h2>
                <div class="platform-requirements">
                  <div class="platform-item">
                    <i class="fab fa-instagram"></i>
                    <h4>Instagram</h4>
                    <p>Min. followers: <%= collab.instagram_min_followers %></p>
                    <p>Content: <%= collab.instagram_content %></p>
                  </div>
                  <div class="platform-item">
                    <i class="fab fa-tiktok"></i>
                    <h4>TikTok</h4>
                    <p>Min. followers: <%= collab.tiktok_min_followers %></p>
                    <p>Content: <%= collab.tiktok_content %></p>
                  </div>
                  <div class="platform-item">
                    <i class="fab fa-youtube"></i>
                    <h4>YouTube</h4>
                    <p>Min. followers: <%= collab.youtube_min_followers %></p>
                    <p>Content: <%= collab.youtube_content %></p>
                  </div>
                </div>
              </div>
              
              <div class="main-section">
                <h2>Past Collaborations</h2>
                <div class="past-collaborations">
                  <% collab.past_collabs.split('|').forEach(collabItem => { %>
                    <% const [name, campaign, platforms] = collabItem.split(':'); %>
                    <div class="collab-item">
                      <img src="https://randomuser.me/api/portraits/women/43.jpg" alt="<%= name %>">
                      <div class="collab-info">
                        <h4><%= name %></h4>
                        <p>Campaign: "<%= campaign %>"</p>
                        <p>Platforms: <%= platforms %></p>
                      </div>
                    </div>
                  <% }); %>
                </div>
              </div>
              
              <div class="action-buttons">
                <a href="/Collabform" class="apply-btn">
                  <i class="fas fa-handshake"></i> Apply for Collaboration
                </a>
                <button class="save-btn">
                  <i class="far fa-bookmark"></i> Save for Later
                </button>
                <button class="share-btn">
                  <i class="fas fa-share-alt"></i> Share
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>

    <script>
       function openMenu() {
      document.getElementById("navMenu").style.width = "250px";
    }
    function closeMenu() {
      document.getElementById("navMenu").style.width = "0";
    }
    document.querySelector('.save-btn').addEventListener('click', function() {
      this.innerHTML = '<i class="fas fa-bookmark"></i> Saved';
      this.classList.add('saved');
    });
    document.querySelector('.share-btn').addEventListener('click', function() {
      alert('Share functionality would be implemented here.');
    });
    </script>


</body>

</html>