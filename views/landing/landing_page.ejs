  <script>
    // Modal functions
    function openBrandsModal() {
      document.getElementById('brandsModal').style.display = 'block';
      loadBrands();
    }

    function closeBrandsModal() {
      document.getElementById('brandsModal').style.display = 'none';
    }

    function openInfluencersModal() {
      document.getElementById('influencersModal').style.display = 'block';
      loadInfluencers();
    }

    function closeInfluencersModal() {
      document.getElementById('influencersModal').style.display = 'none';
    }

    // Close modal when clicking outside
    window.onclick = function (event) {
      const brandsModal = document.getElementById('brandsModal');
      const influencersModal = document.getElementById('influencersModal');

      if (event.target === brandsModal) {
        closeBrandsModal();
      }
      if (event.target === influencersModal) {
        closeInfluencersModal();
      }
    }

    // Load brands data
    async function loadBrands() {
      const container = document.getElementById('brandsContainer');
      const loading = document.getElementById('brandsLoading');

      try {
        loading.style.display = 'block';
        container.innerHTML = '';

        const response = await fetch('/api/brands');
        const brands = await response.json();

        if (brands.length === 0) {
          container.innerHTML = '<div class="text-center py-4"><p>No brands found.</p></div>';
          return;
        }

        brands.forEach(brand => {
          const brandCard = createBrandCard(brand);
          container.appendChild(brandCard);
        });

        // Setup search functionality
        setupBrandSearch(brands);

      } catch (error) {
        console.error('Error loading brands:', error);
        container.innerHTML = '<div class="text-center py-4"><p>Error loading brands. Please try again.</p></div>';
      } finally {
        loading.style.display = 'none';
      }
    }

    // Load influencers data
    async function loadInfluencers() {
      const container = document.getElementById('influencersContainer');
      const loading = document.getElementById('influencersLoading');

      try {
        loading.style.display = 'block';
        container.innerHTML = '';

        const response = await fetch('/api/influencers');
        const influencers = await response.json();

        if (influencers.length === 0) {
          container.innerHTML = '<div class="text-center py-4"><p>No influencers found.</p></div>';
          return;
        }

        influencers.forEach(influencer => {
          const influencerCard = createInfluencerCard(influencer);
          container.appendChild(influencerCard);
        });

        // Setup search functionality
        setupInfluencerSearch(influencers);

      } catch (error) {
        console.error('Error loading influencers:', error);
        container.innerHTML = '<div class="text-center py-4"><p>Error loading influencers. Please try again.</p></div>';
      } finally {
        loading.style.display = 'none';
      }
    }

    // Create brand card
    function createBrandCard(brand) {
      const card = document.createElement('div');
      card.className = 'brand-card';

      const categories = brand.categories ? brand.categories.join(', ') : 'General';

      card.innerHTML = `
        <div class="brand-header">
          <img src="${brand.logoUrl || '/images/default-brand-logo.jpg'}" 
               alt="${brand.brandName}" 
               class="brand-logo"
               onerror="this.src='/images/default-brand-logo.jpg'">
          <div class="brand-info">
            <h3 class="brand-name">${brand.brandName}</h3>
            <p class="brand-industry">${brand.industry || 'General'}</p>
          </div>
        </div>
        
        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-number">${brand.completedCampaigns || 0}</span>
            <div class="stat-label">Campaigns</div>
          </div>
          <div class="stat-item">
            <span class="stat-number">${brand.influencerPartnerships || 0}</span>
            <div class="stat-label">Completed Partnerships</div>
          </div>
          <div class="stat-item">
            <span class="stat-number">${(brand.avgCampaignRating || 0).toFixed(1)}</span>
            <div class="stat-label">Rating</div>
          </div>
        </div>
        
        <div class="categories">
          <strong>Categories:</strong>
          <div style="margin-top: 0.5rem;">
            ${brand.categories ? brand.categories.map(cat => `<span class="category-tag">${cat}</span>`).join('') : '<span class="category-tag">General</span>'}
          </div>
        </div>
      `;

      return card;
    }

    // Create influencer card
    function createInfluencerCard(influencer) {
      const card = document.createElement('div');
      card.className = 'influencer-card';

      const platformIcons = {
        'instagram': 'fab fa-instagram',
        'youtube': 'fab fa-youtube',
        'tiktok': 'fab fa-tiktok',
        'facebook': 'fab fa-facebook',
        'twitter': 'fab fa-twitter',
        'linkedin': 'fab fa-linkedin'
      };

      const socialPlatforms = influencer.socialPlatforms || [];

      card.innerHTML = `
        <div class="influencer-header">
          <img src="${influencer.profilePicUrl || '/images/default-avatar.jpg'}" 
               alt="${influencer.fullName}" 
               class="influencer-avatar"
               onerror="this.src='/images/default-avatar.jpg'">
          <div class="influencer-info">
            <h3 class="influencer-name">${influencer.fullName}</h3>
            <p class="influencer-niche">${influencer.niche || 'General'}</p>
          </div>
        </div>
        
        <div class="stats-grid">
          <div class="stat-item">
            <span class="stat-number">${(influencer.totalFollowers || 0).toLocaleString()}</span>
            <div class="stat-label">Total Followers</div>
          </div>
          <div class="stat-item">
            <span class="stat-number">${influencer.completedCollabs || 0}</span>
            <div class="stat-label">Completed Collaborations</div>
          </div>
          <div class="stat-item">
            <span class="stat-number">${(influencer.avgRating || 0).toFixed(1)}</span>
            <div class="stat-label">Rating</div>
          </div>
          <div class="stat-item">
            <span class="stat-number">${(influencer.avgEngagementRate || 0).toFixed(1)}%</span>
            <div class="stat-label">Engagement</div>
          </div>
        </div>
        
        <div class="categories">
          <strong>Categories:</strong>
          <div style="margin-top: 0.5rem;">
            ${influencer.categories ? influencer.categories.map(cat => `<span class="category-tag">${cat}</span>`).join('') : '<span class="category-tag">General</span>'}
          </div>
        </div>
        
        ${socialPlatforms.length > 0 ? `
          <div class="categories">
            <strong>Social Platforms:</strong>
            <div class="social-platforms">
              ${socialPlatforms.map(platform => `
                <div class="platform-icon platform-${platform}">
                  <i class="${platformIcons[platform] || 'fas fa-globe'}"></i>
                </div>
              `).join('')}
            </div>
          </div>
        ` : ''}
      `;

      return card;
    }

    // Setup search functionality
    function setupBrandSearch(brands) {
      const searchInput = document.getElementById('brandSearch');
      const container = document.getElementById('brandsContainer');

      searchInput.addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        const cards = container.querySelectorAll('.brand-card');

        cards.forEach(card => {
          const text = card.textContent.toLowerCase();
          card.style.display = text.includes(searchTerm) ? 'block' : 'none';
        });
      });
    }

    function setupInfluencerSearch(influencers) {
      const searchInput = document.getElementById('influencerSearch');
      const container = document.getElementById('influencersContainer');

      searchInput.addEventListener('input', function () {
        const searchTerm = this.value.toLowerCase();
        const cards = container.querySelectorAll('.influencer-card');

        cards.forEach(card => {
          const text = card.textContent.toLowerCase();
          card.style.display = text.includes(searchTerm) ? 'block' : 'none';
        });
      });
    }
  </script>

