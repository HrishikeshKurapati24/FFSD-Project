<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Influencer & Brand Collaboration - Admin Login</title>
    <link rel="stylesheet" href="/admin/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>
    <div class="login-container">
        <div class="login-box">
            <div class="logo">
                <h1>CollabSync</h1>
                <p>Admin Portal for Influencer & Brand Collaboration</p>
            </div>
            <h2>Admin Login</h2>
            <form id="loginForm" action="/admin/login/verify" method="POST">
                <div class="input-group">
                    <label for="username">Admin Username</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input type="text" id="username" name="username" placeholder="Enter your username" required>
                    </div>
                </div>
                <div class="input-group">
                    <label for="password">Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="password" name="password" placeholder="Enter your password" required>
                    </div>
                </div>
                <div class="options">
                    <label class="remember-me">
                        <input type="checkbox" id="rememberMe" name="rememberMe">
                        Remember Me
                    </label>
                    <a href="#" class="forgot-password" id="forgotPasswordLink">Forgot Password?</a>
                </div>
                <button type="submit" class="login-btn">Log In</button>
            </form>
            <p class="support-text">Need help? Contact <a href="mailto:support@CollabSync.com">
                    <h4>support@collabsync.com</h4>
                </a></p>
        </div>
    </div>

    <!-- Forgot Password Modal -->
    <div id="forgotPasswordModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Reset Password</h2>
            <form id="forgotPasswordForm">
                <div class="input-group">
                    <label for="resetUsername">Username</label>
                    <div class="input-wrapper">
                        <i class="fas fa-user"></i>
                        <input type="text" id="resetUsername" name="username" placeholder="Enter your username"
                            required>
                    </div>
                </div>
                <div class="input-group">
                    <label for="newPassword">New Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="newPassword" name="newPassword" placeholder="Enter new password"
                            required>
                    </div>
                </div>
                <div class="input-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <div class="input-wrapper">
                        <i class="fas fa-lock"></i>
                        <input type="password" id="confirmPassword" name="confirmPassword"
                            placeholder="Confirm new password" required>
                    </div>
                </div>
                <button type="submit" class="reset-btn">Reset Password</button>
            </form>
        </div>
    </div>

    <script src="/admin/login.js"></script>
</body>

</html>