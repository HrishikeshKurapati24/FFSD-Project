<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Payment Verification</title>
    <link rel="stylesheet" href="/admin/admin_dashboard.css" />
    <link rel="stylesheet" href="/admin/payment_verification.css" />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <button class="menu-btn" onclick="toggleLeftNavbar()">☰</button>
            <div class="sidebar" id="sidebar">
                <button class="close-btn" onclick="toggleLeftNavbar()">×</button>
                <div class="menu">
                    <ul class="list">
                        <li>
                            <a href="/admin/dashboard">
                                <i class="fas fa-users"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/user_management">
                                <i class="fas fa-users"></i>
                                <span>User Management</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/collaboration_monitoring">
                                <i class="fas fa-handshake"></i>
                                <span>Collaboration Monitoring</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="/admin/payment_verification">
                                <i class="fas fa-money-check"></i>
                                <span>Payment Verification</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/feedback_and_moderation">
                                <i class="fas fa-comments"></i>
                                <span>Feedback & Moderation</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="heading">
            <h1>CollabSync</h1>
        </div>

        <div class="navbar-right">
            <div class="notifications">
                <div class="notification-icon" onclick="toggleNotifications()">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge" id="notification-count">0</span>
                </div>
                <div class="notifications-dropdown" id="notifications-dropdown">
                    <div class="notifications-header">
                        <h3>Notifications</h3>
                        <button onclick="markAllAsRead()" class="mark-read-btn">Mark all as read</button>
                    </div>
                    <div class="notifications-list" id="notifications-list">
                        <!-- Notifications will be dynamically inserted here -->
                    </div>
                </div>
            </div>

            <button class="dark-mode-toggle" onclick="toggleDarkMode()">
                <i class="fas fa-moon" id="theme-icon"></i>
            </button>

            <div class="profile">
                <div class="profile-icon" onclick="toggleProfileDropdown()">
                    <img src="/images/default-avatar.png" alt="Profile" id="profile-image" />
                    <span id="user-name"><%= user.name %></span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="profile-dropdown" id="profile-dropdown">
                    <a href="/admin/settings">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                    <a href="#" onclick="handleLogout()">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <main>
        <section class="payment-verification">
            <h1>Payment Verification</h1>

            <!-- Filters -->
            <div class="filters">
                <input type="text" id="search-payments" placeholder="Search transactions..." />
                <select id="status-filter">
                    <option value="all">All Statuses</option>
                    <option value="pending">Pending</option>
                    <option value="approved">Approved</option>
                    <option value="failed">Failed</option>
                </select>
                <select id="payment-method-filter">
                    <option value="all">All Payment Methods</option>
                    <option value="credit-card">Credit Card</option>
                    <option value="paypal">PayPal</option>
                    <option value="bank-transfer">Bank Transfer</option>
                </select>
                <select id="collab-type-filter">
                    <option value="all">All Collaboration Types</option>
                    <option value="paid">Paid</option>
                    <option value="sponsored">Sponsored</option>
                    <option value="giveaway">Giveaway</option>
                </select>
                <select id="influencer-category-filter">
                    <option value="all">All Influencer Categories</option>
                    <option value="fashion">Fashion</option>
                    <option value="fitness">Fitness</option>
                    <option value="travel">Travel</option>
                </select>
                <input type="date" id="start-date-filter" placeholder="Start Date" />
                <input type="date" id="end-date-filter" placeholder="End Date" />
                <button id="reset-filters"><i class="fas fa-sync"></i> Reset Filters</button>
            </div>

            <!-- Add error message handling -->
            <div class="main-content">
                <% if (typeof error !== "undefined" && error) { %>
                <div class="error-alert"><%= error %></div>
                <% } %>

                <!-- Payment table -->
                <div class="payment-table">
                    <% if (payments && payments.length > 0) { %>
                    <table>
                        <thead>
                            <tr>
                                <th>Transaction ID</th>
                                <th>Date</th>
                                <th>Brand</th>
                                <th>Influencer</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% payments.forEach((payment) => { %>
                            <tr>
                                <td><%= payment.transactionId %></td>
                                <td><%= payment.date %></td>
                                <td><%= payment.brand ? payment.brand : 'Unknown Brand' %></td>
                                <td><%= payment.influencer ? payment.influencer : 'Unknown Influencer' %></td>
                                <td>$<%= payment.amount ? payment.amount.toLocaleString() : '' %></td>
                                <td><%= payment.status %></td>
                                <td>
                                    <button class="btn-action btn-view" onclick="viewPayment('<%= payment.transactionId %>')" style="padding: 6px 12px; background: #007bff; color: white; border: none; border-radius: 4px; cursor: pointer; margin-right: 5px;">
                                        <i class="fas fa-eye"></i> View
                                    </button>
                                    <% if (payment.status === 'pending') { %>
                                    <button class="btn-action btn-approve" onclick="approvePayment('<%= payment.transactionId %>')" style="padding: 6px 12px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; margin-right: 5px;">
                                        <i class="fas fa-check"></i> Approve
                                    </button>
                                    <button class="btn-action btn-reject" onclick="rejectPayment('<%= payment.transactionId %>')" style="padding: 6px 12px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;">
                                        <i class="fas fa-times"></i> Reject
                                    </button>
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                    <div class="no-data-message">
                        <p>No payments found</p>
                    </div>
                    <% } %>
                </div>
            </div>
        </section>
    </main>

    <!-- Payment Details Modal -->
    <div id="payment-modal" class="modal" style="display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.5);">
        <div class="modal-content" style="background-color: #fefefe; margin: 5% auto; padding: 20px; border: 1px solid #888; width: 80%; max-width: 600px; border-radius: 8px;">
            <span class="close" onclick="closePaymentModal()" style="color: #aaa; float: right; font-size: 28px; font-weight: bold; cursor: pointer;">&times;</span>
            <h2 id="modal-payment-title">Payment Details</h2>
            <div class="modal-details">
                <p><strong>Transaction ID:</strong> <span id="modal-transaction-id"></span></p>
                <p><strong>Brand:</strong> <span id="modal-brand"></span></p>
                <p><strong>Influencer:</strong> <span id="modal-influencer"></span></p>
                <p><strong>Amount:</strong> <span id="modal-amount"></span></p>
                <p><strong>Payment Method:</strong> <span id="modal-payment-method"></span></p>
                <p><strong>Date:</strong> <span id="modal-date"></span></p>
                <p><strong>Status:</strong> <span id="modal-status"></span></p>
                <p><strong>Collaboration Type:</strong> <span id="modal-collab-type"></span></p>
                <p><strong>Description:</strong> <span id="modal-description"></span></p>
            </div>
            <div style="margin-top: 20px; text-align: right;">
                <button class="btn-action btn-approve" id="modal-approve-btn" onclick="approvePaymentFromModal()" style="padding: 8px 16px; background: #28a745; color: white; border: none; border-radius: 4px; cursor: pointer; margin-right: 10px;">
                    <i class="fas fa-check"></i> Approve Payment
                </button>
                <button class="btn-action btn-reject" id="modal-reject-btn" onclick="rejectPaymentFromModal()" style="padding: 8px 16px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;">
                    <i class="fas fa-times"></i> Reject Payment
                </button>
            </div>
        </div>
    </div>

    <script src="/admin/admin_dashboard.js"></script>
    <script src="/admin/payment_verification.js"></script>
</body>

</html>
