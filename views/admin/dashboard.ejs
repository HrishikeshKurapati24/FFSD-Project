<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/admin_dashboard.css">
    <link rel="stylesheet" href="/admin/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <button class="menu-btn" onclick="toggleLeftNavbar()">☰</button>
            <div class="sidebar" id="sidebar">
                <button class="close-btn" onclick="toggleLeftNavbar()">×</button>
                <div class="menu">
                    <ul class="list">
                        <li class="active">
                            <a href="/admin/dashboard">
                                <i class="fas fa-users"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/user_management">
                                <i class="fas fa-users"></i>
                                <span>User Management</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/customer-management">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Customer Management</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/collaboration_monitoring">
                                <i class="fas fa-handshake"></i>
                                <span>Collaboration Monitoring</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/payment_verification">
                                <i class="fas fa-money-check"></i>
                                <span>Payment Verification</span>
                            </a>
                        </li>
                        <!-- <li>
                            <a href="/admin/feedback_and_moderation">
                                <i class="fas fa-comments"></i>
                                <span>Feedback & Moderation</span>
                            </a>
                        </li> -->
                    </ul>
                </div>
            </div>
        </div>

        <div class="heading">
            <h1>CollabSync</h1>
        </div>

        <div class="navbar-right">
            <div class="notifications">
                <div class="notification-icon" onclick="toggleNotifications()">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge" id="notification-count">
                        <%= notifications.filter(n=> !n.read).length %>
                    </span>
                </div>
                <div class="notifications-dropdown" id="notifications-dropdown">
                    <div class="notifications-header">
                        <h3>Notifications</h3>
                        <button onclick="markAllAsRead()" class="mark-read-btn">
                            Mark all as read
                        </button>
                    </div>
                    <div class="notifications-list" id="notifications-list">
                        <% if (notifications && notifications.length> 0) { %>
                            <% notifications.forEach(notification=> { %>
                                <div class="notification-item <%= notification.read ? 'read' : 'unread' %>"
                                    data-id="<%= notification.id %>">
                                    <div class="notification-icon">
                                        <i
                                            class="fas fa-<%= notification.type === 'collaboration' ? 'handshake' : notification.type === 'payment' ? 'money-check' : 'user' %>"></i>
                                    </div>
                                    <div class="notification-content">
                                        <div class="notification-title">
                                            <%= notification.title %>
                                        </div>
                                        <div class="notification-message">
                                            <%= notification.message %>
                                        </div>
                                        <div class="notification-time">
                                            <%= notification.timestamp.toLocaleString() %>
                                        </div>
                                    </div>
                                    <div class="notification-priority <%= notification.priority %>">
                                        <i class="fas fa-circle"></i>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="no-notifications">No notifications available</div>
                                        <% } %>
                    </div>
                </div>
            </div>

            <!-- <button class="dark-mode-toggle" onclick="toggleDarkMode()">
                <i class="fas fa-moon"></i>
            </button> -->

            <div class="profile">
                <div class="profile-icon" onclick="toggleProfileDropdown()">
                    <img src="/images/default-avatar.png" alt="Profile" id="profile-image">
                    <span id="user-name">
                        <%= user.name %>
                    </span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="profile-dropdown" id="profile-dropdown">
                    <!-- <a href="/admin/settings">
                        <i class="fas fa-cog"></i> Settings
                    </a> -->
                    <a href="#" onclick="handleLogout()">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <h1>
        Admin Dashboard
    </h1>

    <!-- Main Content -->
    <div class="main-content" id="main-content">
        <h1>Welcome, <%= user.name %>
        </h1>
        <p>
            Let's get to work! Here are some key metrics and analytics to help you manage the platform effectively.
        </p>

        <div class="stats-container">
            <!-- Product Metrics Section -->
            <div class="dashboard-card">
                <h3>Total Products Sold</h3>
                <p>
                    <%= totalSoldQuantity.toLocaleString() %>
                </p>
                <p>Units sold across all campaigns</p>
            </div>
            <div class="dashboard-card">
                <h3>Average Product Price</h3>
                <p>$<%= avgProductPrice.toFixed(2) %>
                </p>
                <p>Average price across <%= totalProducts %> products</p>
            </div>

            <% stats.filter(stat=> stat.label !== "Total Revenue").forEach(stat => { %>
                <div class="dashboard-card">
                    <p>
                        <%= stat.label %>
                    </p>
                    <h2>
                        <%= stat.value %>
                            <span class="badge <%= stat.color %>">&#9633; <%= stat.growth %>%</span>
                    </h2>
                    <p>
                        <%= stat.description %>
                    </p>
                </div>
                <% }); %>
        </div>

        <div class="analytics-container">
            <h2>Revenue Analytics</h2>
            <div class="analytics-grid">
                <div class="analytics-card">
                    <h3>Commission Overview</h3>
                    <div class="commission-stats">
                        <div class="stat-item">
                            <span class="label">Total Revenue</span>
                            <span class="value">$<%= totalRevenue.toLocaleString() %></span>
                            <span class="growth <%= revenueGrowth >= 0 ? 'positive' : 'negative' %>">
                                <i class="fas fa-<%= revenueGrowth >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                <%= Math.abs(revenueGrowth).toFixed(1) %>%
                            </span>
                        </div>
                        <div class="stat-item">
                            <span class="label">Active Collaborations</span>
                            <span class="value">
                                <%= activeCollabs %>
                            </span>
                        </div>
                        <div class="stat-item">
                            <span class="label">Average Deal Size</span>
                            <span class="value">$<%= avgDealSize.toLocaleString() %></span>
                        </div>
                    </div>
                </div>
                <div class="analytics-card transactions-card">
                    <h3>Recent Transactions</h3>
                    <div class="transactions-table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Collaboration</th>
                                    <th>Amount</th>
                                    <th>Commission</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% recentTransactions.slice(0, 5).forEach(transaction=> { %>
                                    <tr>
                                        <td>
                                            <%= transaction.date %>
                                        </td>
                                        <td>
                                            <%= transaction.collab %>
                                        </td>
                                        <td>$<%= transaction.amount.toLocaleString() %>
                                        </td>
                                        <td>$<%= (transaction.amount * 0.05).toLocaleString() %>
                                        </td>
                                    </tr>
                                    <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="analytics-container">
            <h2>Performance Analytics Dashboard</h2>
            <div class="analytics-grid">
                <% analytics.forEach(metric=> { %>
                    <div class="analytics-card">
                        <h3>
                            <%= metric.title %>
                        </h3>
                        <canvas id="<%= metric.chartId %>" data-chart='<%- JSON.stringify({
                            type: metric.type,
                            label: metric.title,
                            labels: metric.labels,
                            values: metric.values
                        }) %>'>
                        </canvas>
                    </div>
                    <% }); %>
            </div>
        </div>

        <!-- Top Brands and Influencers Section -->
        <div class="analytics-container">
            <h2>Top Performers</h2>
            <div class="analytics-grid">
                <div class="analytics-card">
                    <h3>Top Brands by Revenue</h3>
                    <div class="top-performers-list">
                        <% if (topBrands && topBrands.length> 0) { %>
                            <% topBrands.forEach((brand, index)=> { %>
                                <div class="performer-item">
                                    <div class="rank">#<%= index + 1 %>
                                    </div>
                                    <div class="performer-info">
                                        <div class="name">
                                            <%= brand.name || 'Unknown Brand' %>
                                        </div>
                                        <div class="stats">
                                            <span class="revenue">$<%= (brand.totalRevenue || 0).toLocaleString() %>
                                            </span>
                                            <span class="deals">
                                                <%= brand.dealCount || 0 %> deals
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="no-data">No brand data available</div>
                                        <% } %>
                    </div>
                </div>
                <div class="analytics-card">
                    <h3>Top Influencers by Audience</h3>
                    <div class="top-performers-list">
                        <% if (topInfluencers && topInfluencers.length> 0) { %>
                            <% topInfluencers.forEach((influencer, index)=> { %>
                                <div class="performer-item">
                                    <div class="rank">#<%= index + 1 %>
                                    </div>
                                    <div class="performer-info">
                                        <div class="name">
                                            <%= influencer.displayName || 'Unknown Influencer' %>
                                        </div>
                                        <div class="stats">
                                            <span class="audience">
                                                <%= (influencer.audienceSize || 0).toLocaleString() %> followers
                                            </span>
                                            <span class="category">
                                                <%= influencer.categories ? influencer.categories.join(', ') : ' N/A' %>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <div class="no-data">No influencer data available</div>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- New Dashboard Links Section -->
        <div class="dashboard-links-container">
            <h2>Detailed Analytics Dashboards</h2>
            <div class="dashboard-links">
                <a href="/admin/brand-analytics" class="dashboard-link">
                    <i class="fas fa-building"></i>
                    <h3>Brand Analytics</h3>
                    <p>Detailed analysis of brand performance, engagement, and ROI metrics</p>
                </a>
                <a href="/admin/influencer-analytics" class="dashboard-link">
                    <i class="fas fa-star"></i>
                    <h3>Influencer Analytics</h3>
                    <p>Comprehensive insights into influencer performance and campaign success</p>
                </a>
                <a href="/admin/campaign-analytics" class="dashboard-link">
                    <i class="fas fa-users"></i>
                    <h3>Campaign Analytics</h3>
                    <p>In-depth analysis of campaign performance, engagement, and ROI metrics</p>
                </a>
            </div>
        </div>
    </div>

    <script src="/admin/admin_dashboard.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll("canvas").forEach(canvas => {
                const chartData = JSON.parse(canvas.getAttribute("data-chart"));
                new Chart(canvas.getContext("2d"), {
                    type: chartData.type,
                    data: {
                        labels: chartData.labels,
                        datasets: [{
                            label: chartData.label,
                            data: chartData.values,
                            backgroundColor: chartData.type === 'doughnut'
                                ? ['#FF6384', '#36A2EB', '#FFCE56']
                                : 'rgba(75, 192, 192, 0.5)',
                            borderColor: chartData.type === 'line' || chartData.type === 'bar'
                                ? 'rgba(75, 192, 192, 1)'
                                : undefined,
                            borderWidth: 1,
                            fill: chartData.type === 'line'
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        plugins: {
                            legend: {
                                display: chartData.type !== 'bar'
                            }
                        }
                    }
                });
            });
        });

        // Notification functionality
        function toggleNotifications() {
            const dropdown = document.getElementById('notifications-dropdown');
            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
        }

        function markAllAsRead() {
            const unreadNotifications = document.querySelectorAll('.notification-item.unread');
            unreadNotifications.forEach(item => {
                item.classList.remove('unread');
                item.classList.add('read');
            });

            // Update notification count
            document.getElementById('notification-count').textContent = '0';
        }

        // Close notifications when clicking outside
        document.addEventListener('click', function (event) {
            const notifications = document.querySelector('.notifications');
            const dropdown = document.getElementById('notifications-dropdown');

            if (!notifications.contains(event.target)) {
                dropdown.style.display = 'none';
            }
        });
    </script>
</body>

</html>