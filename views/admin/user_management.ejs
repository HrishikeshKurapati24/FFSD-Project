<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>User Management</title>
    <link rel="stylesheet" href="/admin/admin_dashboard.css" />
    <link rel="stylesheet" href="/admin/user_management.css" />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <style>
        /* Modal Styles */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
        }

        .modal-content {
            background-color: #fefefe;
            margin: 5% auto;
            padding: 20px;
            border: 1px solid #888;
            width: 80%;
            max-width: 800px;
            max-height: 80vh;
            overflow-y: auto;
            border-radius: 8px;
        }

        .close-modal {
            color: #aaa;
            float: right;
            font-size: 28px;
            font-weight: bold;
            cursor: pointer;
        }

        .close-modal:hover {
            color: black;
        }

        .modal-actions {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .btn-view-profile {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 0.9em;
        }

        .btn-view-profile:hover {
            background-color: #0056b3;
        }

        .btn-secondary {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-secondary:hover {
            background-color: #545b62;
        }

        .btn-approve {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        .btn-approve:hover {
            background-color: #218838;
        }

        /* Profile Content Styles */
        .profile-section {
            margin-bottom: 20px;
        }

        .profile-section h3 {
            color: #333;
            border-bottom: 2px solid #007bff;
            padding-bottom: 5px;
            margin-bottom: 15px;
        }

        .profile-field {
            display: flex;
            margin-bottom: 10px;
        }

        .profile-field label {
            font-weight: bold;
            width: 150px;
            color: #555;
        }

        .profile-field span {
            color: #333;
        }

        .verified-badge {
            background-color: #28a745;
            color: white;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8em;
        }

        .unverified-badge {
            background-color: #ffc107;
            color: black;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8em;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar">
        <div class="navbar-left">
            <button class="menu-btn" onclick="toggleLeftNavbar()">☰</button>
            <div class="sidebar" id="sidebar">
                <button class="close-btn" onclick="toggleLeftNavbar()">×</button>
                <div class="menu">
                    <ul class="list">
                        <li>
                            <a href="/admin/dashboard">
                                <i class="fas fa-users"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="active">
                            <a href="/admin/user_management">
                                <i class="fas fa-users"></i>
                                <span>User Management</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/collaboration_monitoring">
                                <i class="fas fa-handshake"></i>
                                <span>Collaboration Monitoring</span>
                            </a>
                        </li>
                        <li>
                            <a href="/admin/payment_verification">
                                <i class="fas fa-money-check"></i>
                                <span>Payment Verification</span>
                            </a>
                        </li>
                        <li>
                            <!-- <a href="/admin/feedback_and_moderation">
                                <i class="fas fa-comments"></i>
                                <span>Feedback & Moderation</span> -->
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="heading">
            <h1>CollabSync</h1>
        </div>

        <div class="navbar-right">
            <div class="notifications">
                <div class="notification-icon" onclick="toggleNotifications()">
                    <i class="fas fa-bell"></i>
                    <span class="notification-badge" id="notification-count">0</span>
                </div>
                <div class="notifications-dropdown" id="notifications-dropdown">
                    <div class="notifications-header">
                        <h3>Notifications</h3>
                        <button onclick="markAllAsRead()" class="mark-read-btn">Mark all as read</button>
                    </div>
                    <div class="notifications-list" id="notifications-list">
                        <!-- Notifications will be dynamically inserted here -->
                    </div>
                </div>
            </div>

            <button class="dark-mode-toggle" onclick="toggleDarkMode()">
                <i class="fas fa-moon"></i>
            </button>

            <div class="profile">
                <div class="profile-icon" onclick="toggleProfileDropdown()">
                    <img src="/images/default-avatar.png" alt="Profile" id="profile-image" />
                    <span id="user-name"><%= user.name %></span>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="profile-dropdown" id="profile-dropdown">
                    <a href="/admin/settings">
                        <i class="fas fa-cog"></i> Settings
                    </a>
                    <a href="#" onclick="handleLogout()">
                        <i class="fas fa-sign-out-alt"></i> Logout
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="main-content">
        <% if (typeof error !== "undefined" && error) { %>
        <div class="error-alert"><%= error %></div>
        <% } %>

        <div class="container">
            <h1>User Management</h1>

            <!-- Tabs for Different Moderation Categories -->
            <div class="tabs">
                <button class="tab-button active" onclick="showTab('verifyRegistrations')">
                    Verify Registrations
                </button>
                <button class="tab-button" onclick="showTab('flaggedContent')">
                    Flagged Content
                </button>
                <button class="tab-button" onclick="showTab('suspiciousActivity')">
                    Suspicious Activity
                </button>
                <!-- <button class="tab-button" onclick="showTab('userTypeRequests')">User Type Change
                            Requests</button>
                        <button class="tab-button" onclick="showTab('profileImprovement')">Profile Improvement
                            Suggestions</button> -->
            </div>

            <!-- Verify Registrations Tab -->
            <div id="verifyRegistrations" class="tab-content">
                <h2>Verify Registrations</h2>

                <!-- Influencer Registrations Section -->
                <h3>Influencer Registrations</h3>
                <% if (influencers && influencers.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Influencer Name</th>
                            <th>Email</th>
                            <th>Category</th>
                            <th>Social Media Handles</th>
                            <th>Audience Size</th>
                            <th>Verified</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% influencers.forEach((influencer) => { %>
                        <tr>
                            <td><%= influencer.name || influencer.displayName || 'N/A' %></td>
                            <td><%= influencer.email || 'N/A' %></td>
                            <td><%= influencer.category || influencer.businessCategory || 'N/A' %></td>
                            <td><%= influencer.social_handles || influencer.socialHandles || 'N/A' %></td>
                            <td><%= influencer.audienceSize ? influencer.audienceSize.toLocaleString() : '0' %></td>
                            <td>
                                <% if (influencer.verified) { %>
                                <span class="verified-badge">Verified</span>
                                <% } else { %>
                                <span class="unverified-badge">Unverified</span>
                                <% } %>
                            </td>
                            <td>
                                <button class="btn-view-profile" onclick="viewInfluencerProfile('<%= influencer._id || influencer.id %>')">View Profile</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                <p>No pending influencer registrations</p>
                <% } %>

                <!-- Verify Brand Registrations Section -->
                <h3>Verify Brand Registrations</h3>
                <% if (brands && brands.length > 0) { %>
                <table>
                    <thead>
                        <tr>
                            <th>Brand Name</th>
                            <th>Email</th>
                            <th>Website</th>
                            <th>Industry</th>
                            <th>Total Audience</th>
                            <th>Verified</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% brands.forEach((brand) => { %>
                        <tr>
                            <td><%= brand.brandName || brand.name || 'N/A' %></td>
                            <td><%= brand.email || 'N/A' %></td>
                            <td><%= brand.website || 'N/A' %></td>
                            <td><%= brand.industry || brand.businessCategory || brand.category || 'N/A' %></td>
                            <td><%= brand.totalAudience ? brand.totalAudience.toLocaleString() : '0' %></td>
                            <td>
                                <% if (brand.verified) { %>
                                <span class="verified-badge">Verified</span>
                                <% } else { %>
                                <span class="unverified-badge">Unverified</span>
                                <% } %>
                            </td>
                            <td>
                                <button class="btn-view-profile" onclick="viewBrandProfile('<%= brand._id || brand.id %>')">View Profile</button>
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                <p>No pending brand registrations</p>
                <% } %>
            </div>

            <!-- Flagged Content -->
            <div id="flaggedContent" class="tab-content">
                <h2>Flagged Content for Review</h2>
                <% if (flaggedContent && flaggedContent.length > 0) { %>
                <ul>
                    <% flaggedContent.forEach((content) => { %>
                    <li><%= content %></li>
                    <% }); %>
                </ul>
                <% } else { %>
                <p>No flagged content to review</p>
                <% } %>
            </div>

            <!-- Suspicious Activity -->
            <div id="suspiciousActivity" class="tab-content">
                <h2>Suspicious User Activity</h2>
                <ul>
                    <% suspiciousUsers.forEach((user) => { %>
                    <li><%= user %></li>
                    <% }); %>
                </ul>
            </div>

            <!-- User Type Change Requests -->
            <div id="userTypeRequests" class="tab-content">
                <h2>User Type Change Requests</h2>
                <ul>
                    <% userTypeRequests.forEach((request) => { %>
                    <li><%= request %></li>
                    <% }); %>
                </ul>
            </div>

            <!-- Profile Improvement Suggestions -->
            <div id="profileImprovement" class="tab-content">
                <h2>Profile Improvement Suggestions</h2>
                <ul>
                    <% profileSuggestions.forEach((suggestion) => { %>
                    <li><%= suggestion %></li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Brand Profile Modal -->
    <div class="modal" id="brandProfileModal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeBrandProfileModal()">&times;</span>
            <h2 id="brandModalTitle">Brand Profile</h2>
            <div id="brandProfileContent">
                <!-- Brand profile content will be loaded here -->
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeBrandProfileModal()">Close</button>
                <button type="button" class="btn-approve" id="approveBrandBtn" onclick="approveBrandFromModal()">Approve Brand</button>
            </div>
        </div>
    </div>

    <!-- Influencer Profile Modal -->
    <div class="modal" id="influencerProfileModal">
        <div class="modal-content">
            <span class="close-modal" onclick="closeInfluencerProfileModal()">&times;</span>
            <h2 id="influencerModalTitle">Influencer Profile</h2>
            <div id="influencerProfileContent">
                <!-- Influencer profile content will be loaded here -->
            </div>
            <div class="modal-actions">
                <button type="button" class="btn-secondary" onclick="closeInfluencerProfileModal()">Close</button>
                <button type="button" class="btn-approve" id="approveInfluencerBtn" onclick="approveInfluencerFromModal()">Approve Influencer</button>
            </div>
        </div>
    </div>

    <script src="/admin/admin_dashboard.js"></script>
    <script src="/admin/user_management.js"></script>
</body>

</html>
