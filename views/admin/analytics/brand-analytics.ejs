<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Brand Analytics - Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/admin_dashboard.css" />
    <link rel="stylesheet" href="/admin/analytics.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="analytics-wrapper">
        <% if (typeof error !=='undefined' && error) { %>
            <div class="error-alert">
                <%= error %>
            </div>
            <% } %>

                <div class="analytics-header">
                    <h1>Brand Analytics</h1>
                    <div class="date-filter">
                        <select id="timeRange">
                            <option value="7">Last 7 days</option>
                            <option value="30" selected>Last 30 days</option>
                            <option value="90">Last 90 days</option>
                            <option value="365">Last year</option>
                        </select>
                    </div>
                </div>

                <% if (metrics) { %>
                    <div class="metrics-overview">
                        <div class="metric-card">
                            <h3>Total Brands</h3>
                            <div class="metric-value">
                                <%= metrics.totalBrands !=null ? metrics.totalBrands.toLocaleString() : 'N/A' %>
                            </div>
                            <div class="metric-change <%= metrics.brandGrowth >= 0 ? 'positive' : 'negative' %>">
                                <i class="fas fa-<%= metrics.brandGrowth >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                <%= Math.abs(metrics.brandGrowth) %>% from last month
                            </div>
                        </div>
                        <div class="metric-card">
                            <h3>Active Brands</h3>
                            <div class="metric-value">
                                <%= metrics.activeBrands !=null ? metrics.activeBrands.toLocaleString() : 'N/A' %>
                            </div>
                            <div class="metric-change <%= metrics.activeGrowth >= 0 ? 'positive' : 'negative' %>">
                                <i class="fas fa-<%= metrics.activeGrowth >= 0 ? 'arrow-up' : 'arrow-down' %>"></i>
                                <%= Math.abs(metrics.activeGrowth) %>% from last month
                            </div>
                        </div>
                        <div class="metric-card highlight-card">
                            <h3>Highest Collaboration Value</h3>
                            <div class="metric-value">
                                $<%= metrics.highestCollabBrand && metrics.highestCollabBrand.value !=null ?
                                    metrics.highestCollabBrand.value.toLocaleString() : 'N/A' %>
                            </div>
                            <div class="brand-detail">
                                <img src="<%= metrics.highestCollabBrand && metrics.highestCollabBrand.logo ? metrics.highestCollabBrand.logo : '/images/default-brand-logo.jpg' %>"
                                    alt="<%= metrics.highestCollabBrand && metrics.highestCollabBrand.name ? metrics.highestCollabBrand.name : 'N/A' %>"
                                    class="brand-mini-logo" />
                                <span>
                                    <%= metrics.highestCollabBrand && metrics.highestCollabBrand.name ?
                                        metrics.highestCollabBrand.name : 'N/A' %>
                                </span>
                            </div>
                        </div>
                        <div class="metric-card highlight-card">
                            <h3>Most Active Brand</h3>
                            <div class="metric-value">
                                <%= metrics.mostActiveBrand && metrics.mostActiveBrand.totalCollabs !=null ?
                                    metrics.mostActiveBrand.totalCollabs : 'N/A' %> collabs
                            </div>
                            <div class="brand-detail">
                                <img src="<%= metrics.mostActiveBrand && metrics.mostActiveBrand.logo ? metrics.mostActiveBrand.logo : '/images/default-brand-logo.jpg' %>"
                                    alt="<%= metrics.mostActiveBrand && metrics.mostActiveBrand.name ? metrics.mostActiveBrand.name : 'N/A' %>"
                                    class="brand-mini-logo" />
                                <span>
                                    <%= metrics.mostActiveBrand && metrics.mostActiveBrand.name ?
                                        metrics.mostActiveBrand.name : 'N/A' %>
                                </span>
                            </div>
                        </div>
                    </div>

                        <div class="charts-container">
                            <div class="chart-card">
                                <h3>Brand Growth Trend</h3>
                                <canvas id="brandGrowthChart"></canvas>
                            </div>

                            <div class="chart-card">
                                <h3>Revenue Overview</h3>
                                <canvas id="revenueChart"></canvas>
                            </div>

                            <div class="chart-card">
                                <h3>Category Distribution</h3>
                                <canvas id="categoryChart"></canvas>
                            </div>
                        </div>


                    <div class="brands-table-container">
                        <h3>Top Performing Brands</h3>
                        <table class="brands-table">
                            <thead>
                                <tr>
                                    <th>Brand</th>
                                    <th>Category</th>
                                    <th>Active Campaigns</th>
                                    <th>Revenue</th>
                                    <th>Engagement Rate</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (metrics.topBrands && metrics.topBrands.length> 0) { %>
                                    <% metrics.topBrands.forEach((brand)=> { %>
                                        <tr>
                                            <td>
                                                <div class="brand-info">
                                                    <img src="<%= brand.logo || '/images/default-brand-logo.jpg' %>"
                                                        alt="<%= brand.name || 'N/A' %>" class="brand-logo" />
                                                    <span>
                                                        <%= brand.name || 'N/A' %>
                                                    </span>
                                                </div>
                                            </td>
                                            <td>
                                                <%= brand.category || 'N/A' %>
                                            </td>
                                            <td>
                                                <%= brand.activeCampaigns !=null ? brand.activeCampaigns : 'N/A' %>
                                            </td>
                                            <td>$<%= brand.revenue !=null ? brand.revenue.toLocaleString() : 'N/A' %>
                                            </td>
                                            <td>
                                                <%= brand.engagementRate !=null ? brand.engagementRate + '%' : 'N/A' %>
                                            </td>
                                            <td>
                                                <span
                                                    class="status-badge <%= brand.status ? brand.status.toLowerCase() : '' %>">
                                                    <%= brand.status || 'N/A' %>
                                                </span>
                                            </td>
                                        </tr>
                                        <% }); %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="6">No top brands data available</td>
                                                </tr>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                    <% } else { %>
                        <div class="no-data-message">
                            <p>No brand analytics data available</p>
                        </div>
                        <% } %>
    </div>

    <script id="metricsData" type="application/json">
        <%- JSON.stringify(metrics || {}) %>
    </script>
    <script src="/admin/brand-analytics.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Brand Growth Trend
    const brandGrowthCtx = document.getElementById('brandGrowthChart').getContext('2d');
    new Chart(brandGrowthCtx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(chartData.brandGrowthData.labels) %>,
            datasets: [{
                label: 'Followers',
                data: <%- JSON.stringify(chartData.brandGrowthData.data) %>,
                borderColor: '#36A2EB',
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                fill: true,
                tension: 0.4
            }]
        }
    });

    // Revenue Overview
    const revenueCtx = document.getElementById('revenueChart').getContext('2d');
    new Chart(revenueCtx, {
        type: 'bar',
        data: {
            labels: <%- JSON.stringify(chartData.revenueData.labels) %>,
            datasets: [{
                label: 'Revenue',
                data: <%- JSON.stringify(chartData.revenueData.data) %>,
                backgroundColor: '#4CAF50'
            }]
        }
    });

    // Category Distribution
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    new Chart(categoryCtx, {
        type: 'doughnut',
        data: {
            labels: <%- JSON.stringify(chartData.categoryDistribution.labels) %>,
            datasets: [{
                data: <%- JSON.stringify(chartData.categoryDistribution.data) %>,
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#8E44AD']
            }]
        }
    });
</script>

</body>

</html>