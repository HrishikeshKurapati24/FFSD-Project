<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Influencer Analytics - Admin Dashboard</title>
    <link rel="stylesheet" href="/admin/admin_dashboard.css" />
    <link rel="stylesheet" href="/admin/analytics.css" />
    <link
        rel="stylesheet"
        href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>

<body>
    <div class="analytics-wrapper">
        <% if (typeof error !== 'undefined' && error) { %>
        <div class="error-alert"><%= error %></div>
        <% } %>

        <div class="analytics-header">
            <h1>Influencer Analytics</h1>
            <div class="date-filter">
                <select id="timeRange">
                    <option value="7">Last 7 days</option>
                    <option value="30" selected>Last 30 days</option>
                    <option value="90">Last 90 days</option>
                    <option value="365">Last year</option>
                </select>
            </div>
        </div>

        <% if (metrics) { %>
        <div class="metrics-overview">
            <div class="metric-card">
                <h3>Total Influencers</h3>
                <div class="metric-value"><%= metrics.totalInfluencers != null ? metrics.totalInfluencers.toLocaleString() : 'N/A' %></div>
            </div>
            <div class="metric-card">
                <h3>Active Influencers</h3>
                <div class="metric-value"><%= metrics.activeInfluencers != null ? metrics.activeInfluencers.toLocaleString() : 'N/A' %></div>
            </div>
            <div class="metric-card">
                <h3>Average Engagement</h3>
                <div class="metric-value"><%= metrics.averageEngagement != null ? metrics.averageEngagement + '%' : 'N/A' %></div>
            </div>
            <div class="metric-card">
                <h3>Top Performing Influencer</h3>
                <div class="metric-value">
                    <%= metrics.topInfluencer && metrics.topInfluencer.name ? metrics.topInfluencer.name : 'N/A' %> with <%= metrics.topInfluencer && metrics.topInfluencer.engagementRate != null ? metrics.topInfluencer.engagementRate + '%' : 'N/A' %> engagement
                </div>
            </div>
        </div>

        <div class="charts-container">
            <div class="chart-card">
                <h3>Influencer Category Breakdown</h3>
                <canvas id="categoryBreakdownChart"></canvas>
            </div>
            <div class="chart-card">
                <h3>Performance Metrics</h3>
                <canvas id="performanceChart"></canvas>
            </div>
        </div>

        <div class="category-distribution">
            <h3>Influencer Categories</h3>
            <div class="category-grid">
                <% if (metrics.categoryBreakdown && metrics.categoryBreakdown.length > 0) { %>
                <% metrics.categoryBreakdown.forEach((category) => { %>
                <div class="category-card">
                    <h4><%= category.name || 'N/A' %></h4>
                    <div class="category-stats">
                        <div class="stat">
                            <span class="label">Count:</span>
                            <span class="value"><%= category.count != null ? category.count : 'N/A' %></span>
                        </div>
                        <div class="stat">
                            <span class="label">Percentage:</span>
                            <span class="value"><%= category.percentage != null ? category.percentage + '%' : 'N/A' %></span>
                        </div>
                    </div>
                </div>
                <% }); %>
                <% } else { %>
                <p>No category breakdown data available</p>
                <% } %>
            </div>
        </div>
        <% } else { %>
        <div class="no-data-message">
            <p>No influencer analytics data available</p>
        </div>
        <% } %>
    </div>

    <script id="metricsData" type="application/json">
        <%- JSON.stringify(metrics || {}) %>
    </script>
    <script src="/admin/influencer-analytics.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('performanceChart').getContext('2d');
    const performanceChart = new Chart(ctx, {
        type: 'bar',
        data: <%- JSON.stringify(performance_analytic.performanceChartData) %>,
        options: {
            responsive: true,
            plugins: {
                title: {
                    display: true,
                    text: 'Monthly Performance Metrics'
                }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>

</body>

</html>
