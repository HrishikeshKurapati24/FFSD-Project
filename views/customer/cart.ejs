<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title %> - CollabSync
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        .navbar {
            background: #ffffff !important;
            border-bottom: 1px solid #e6e9f0;
            box-shadow: 0 4px 14px rgba(17, 17, 17, .06);
        }

        .navbar .navbar-brand {
            color: #111111;
        }

        .navbar .nav-link {
            color: #6c757d;
        }

        .navbar .nav-link:hover,
        .navbar .nav-link.active {
            color: #0d6efd;
            font-weight: 600;
        }

        .navbar .btn-outline-primary {
            border-color: #0d6efd;
            color: #0d6efd;
        }

        .navbar .btn-outline-primary:hover {
            background: #0d6efd;
            color: #ffffff;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/"><i class="fas fa-shopping-bag me-2"></i>CollabSync</a>
            <ul class="nav me-auto">
                <li class="nav-item"><a class="nav-link" href="/customer">All Campaigns</a></li>
                <li class="nav-item"><a class="nav-link" href="/customer/rankings">Rankings</a></li>
            </ul>
            <a class="btn btn-outline-primary" href="/customer">Continue Shopping</a>
        </div>
    </nav>

    <div class="container my-4">
        <h1 class="mb-4">Your Cart</h1>

        <% if (!items || items.length===0) { %>
            <div class="alert alert-info">Your cart is empty.</div>
            <% } else { %>
                <div class="row">
                    <div class="col-lg-8">
                        <ul class="list-group mb-3">
                            <% items.forEach(item=> { %>
                                <li class="list-group-item d-flex align-items-center">
                                    <img src="<%= item.image %>" alt="<%= item.name %>" class="me-3"
                                        style="width:64px;height:64px;object-fit:cover;">
                                    <div class="flex-grow-1">
                                        <div class="fw-bold">
                                            <%= item.name %>
                                        </div>
                                        <small class="text-muted">Qty: <%= item.quantity %></small>
                                    </div>
                                    <div class="text-end">
                                        <div class="fw-bold">$<%= item.lineTotal %>
                                        </div>
                                        <form class="d-inline" method="post" action="/customer/cart/remove"
                                            onsubmit="return removeItem(event, '<%= item.productId %>')">
                                            <button class="btn btn-sm btn-outline-danger mt-2">Remove</button>
                                        </form>
                                    </div>
                                </li>
                                <% }) %>
                        </ul>
                    </div>
                    <div class="col-lg-4">
                        <div class="card mb-3">
                            <div class="card-body">
                                <h5 class="card-title">Summary</h5>
                                <div class="d-flex justify-content-between">
                                    <span>Subtotal</span>
                                    <span>$<%= subtotal %></span>
                                </div>
                                <div class="d-flex justify-content-between">
                                    <span>Shipping</span>
                                    <span>$<%= shipping %></span>
                                </div>
                                <hr>
                                <div class="d-flex justify-content-between fw-bold">
                                    <span>Total</span>
                                    <span>$<%= total %></span>
                                </div>
                            </div>
                        </div>

                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Customer Details</h5>
                                <div class="mb-2">
                                    <label for="custName" class="form-label">Full Name</label>
                                    <input type="text" id="custName" class="form-control" placeholder="John Doe"
                                        required>
                                </div>
                                <div class="mb-2">
                                    <label for="custEmail" class="form-label">Email</label>
                                    <input type="email" id="custEmail" class="form-control"
                                        placeholder="john@example.com" required>
                                </div>
                                <div class="mb-2">
                                    <label for="custPhone" class="form-label">Phone</label>
                                    <input type="tel" id="custPhone" class="form-control" placeholder="+1 555 555 5555">
                                </div>
                                <div class="mb-2">
                                    <label for="custAddress" class="form-label">Address</label>
                                    <input type="text" id="custAddress" class="form-control"
                                        placeholder="Street, City, ZIP">
                                </div>

                                <h6 class="mt-3">Payment Details</h6>
                                <div class="mb-2">
                                    <label for="cardNumber" class="form-label">Card Number</label>
                                    <input type="text" id="cardNumber" class="form-control"
                                        placeholder="4111 1111 1111 1111" inputmode="numeric">
                                </div>
                                <div class="row g-2">
                                    <div class="col">
                                        <label for="expMonth" class="form-label">Exp. Month</label>
                                        <input type="text" id="expMonth" class="form-control" placeholder="MM"
                                            inputmode="numeric">
                                    </div>
                                    <div class="col">
                                        <label for="expYear" class="form-label">Exp. Year</label>
                                        <input type="text" id="expYear" class="form-control" placeholder="YYYY"
                                            inputmode="numeric">
                                    </div>
                                    <div class="col">
                                        <label for="cvv" class="form-label">CVV</label>
                                        <input type="password" id="cvv" class="form-control" placeholder="123"
                                            inputmode="numeric">
                                    </div>
                                </div>
                                <button class="btn btn-primary w-100 mt-3" onclick="checkout()"><i
                                        class="fas fa-credit-card me-2"></i>Checkout</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>
    </div>

    <script>
        async function removeItem(evt, productId) {
            evt.preventDefault();
            const res = await fetch('/customer/cart/remove', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ productId }) });
            const data = await res.json();
            if (data.success) location.reload();
            return false;
        }

        async function checkout() {
            const name = document.getElementById('custName').value.trim();
            const email = document.getElementById('custEmail').value.trim();
            const phone = document.getElementById('custPhone').value.trim();
            const address = document.getElementById('custAddress').value.trim();
            const cardNumber = document.getElementById('cardNumber').value.trim();
            const expMonth = document.getElementById('expMonth').value.trim();
            const expYear = document.getElementById('expYear').value.trim();
            const cvv = document.getElementById('cvv').value.trim();

            if (!name || !email) {
                alert('Please provide your name and email to proceed.');
                return;
            }

            const payload = {
                customerInfo: { name, email, phone, address },
                paymentInfo: { cardNumber, expMonth, expYear, cvv }
            };

            const res = await fetch('/customer/checkout', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(payload)
            });
            const data = await res.json();
            if (data.success) {
                alert(data.message || 'Payment completed successfully!');
                window.location.href = '/customer';
            } else {
                alert(data.message || 'Checkout failed');
            }
        }
    </script>
</body>

</html>