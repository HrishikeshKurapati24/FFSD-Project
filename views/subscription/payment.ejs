<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment - CollabSync</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/subscription/payment.css">
</head>

<body>
    <div class="payment-container">
        <!-- Order Summary -->
        <div class="order-summary">
            <h2><i class="fas fa-receipt"></i> Order Summary</h2>

            <div class="plan-details">
                <div class="plan-name">
                    <%= selectedPlan.name %> Plan
                </div>
                <div class="plan-price">
                    $<%= billingCycle==='monthly' ? selectedPlan.price.monthly : selectedPlan.price.yearly %>
                        <span>/<%= billingCycle==='monthly' ? 'month' : 'year' %></span>
                </div>

                <ul class="plan-features">
                    <% if (userType==='brand' ) { %>
                        <li><i class="fas fa-check"></i>
                            <%= selectedPlan.features.maxCampaigns===-1 ? 'Unlimited' :
                                selectedPlan.features.maxCampaigns %> Campaigns
                        </li>
                        <li><i class="fas fa-check"></i>
                            <%= selectedPlan.features.maxInfluencers===-1 ? 'Unlimited' :
                                selectedPlan.features.maxInfluencers %> Influencer Connections
                        </li>
                        <% } else { %>
                            <li><i class="fas fa-check"></i>
                                <%= selectedPlan.features.maxBrands===-1 ? 'Unlimited' : selectedPlan.features.maxBrands
                                    %> Brand Connections
                            </li>
                            <% } %>
                                <% if (selectedPlan.features.analytics) { %>
                                    <li><i class="fas fa-check"></i> Basic Analytics</li>
                                    <% } %>
                                        <% if (selectedPlan.features.advancedAnalytics) { %>
                                            <li><i class="fas fa-check"></i> Advanced Analytics</li>
                                            <% } %>
                                                <% if (selectedPlan.features.prioritySupport) { %>
                                                    <li><i class="fas fa-check"></i> Priority Support</li>
                                                    <% } %>
                </ul>
            </div>

            <div class="total-section">
                <div class="total-row">
                    <span>Subtotal:</span>
                    <span>$<%= billingCycle==='monthly' ? selectedPlan.price.monthly : selectedPlan.price.yearly %>
                    </span>
                </div>
                <div class="total-row">
                    <span>Tax:</span>
                    <span>$0.00</span>
                </div>
                <div class="total-row final">
                    <span>Total:</span>
                    <span>$<%= billingCycle==='monthly' ? selectedPlan.price.monthly : selectedPlan.price.yearly %>
                    </span>
                </div>
            </div>
        </div>

        <!-- Payment Form -->
        <div class="payment-form">
            <a href="/subscription/select-plan?userId=<%= userId %>&userType=<%= userType %>" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Plans
            </a>

            <h2><i class="fas fa-credit-card"></i> Payment Details</h2>

            <div class="error-message" id="errorMessage"></div>

            <form id="paymentForm">
                <div class="form-group">
                    <label for="cardNumber">Card Number</label>
                    <input type="text" id="cardNumber" name="cardNumber" class="form-control"
                        placeholder="1234 5678 9012 3456" maxlength="19" required>
                </div>

                <div class="form-group">
                    <label for="cardName">Cardholder Name</label>
                    <input type="text" id="cardName" name="cardName" class="form-control" placeholder="John Doe"
                        required>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label for="expiryDate">Expiry Date</label>
                        <input type="text" id="expiryDate" name="expiryDate" class="form-control" placeholder="MM/YY"
                            maxlength="5" required>
                    </div>
                    <div class="form-group">
                        <label for="cvv">CVV</label>
                        <input type="text" id="cvv" name="cvv" class="form-control" placeholder="123" maxlength="4"
                            required>
                    </div>
                </div>

                <div class="form-group">
                    <label for="billingAddress">Billing Address</label>
                    <input type="text" id="billingAddress" name="billingAddress" class="form-control"
                        placeholder="123 Main St, City, State, ZIP" required>
                </div>

                <div class="security-info">
                    <i class="fas fa-shield-alt"></i>
                    <span>Your payment information is encrypted and secure. We never store your card details.</span>
                </div>

                <button type="submit" class="payment-btn" id="paymentBtn">
                    <i class="fas fa-lock"></i> Complete Payment - $<%= billingCycle==='monthly' ?
                        selectedPlan.price.monthly : selectedPlan.price.yearly %>
                </button>
            </form>

            <div class="loading" id="loadingDiv">
                <div class="spinner"></div>
                <p>Processing your payment...</p>
            </div>
        </div>
    </div>

    <script>
        // Store payment data
        const paymentData = {
            userId: '<%= userId %>',
            userType: '<%= userType %>',
            planId: '<%= selectedPlan._id %>',
            billingCycle: '<%= billingCycle %>',
            amount: <%= billingCycle === 'monthly' ? selectedPlan.price.monthly : selectedPlan.price.yearly %>
        };

        // Format card number input
        document.getElementById('cardNumber').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
            e.target.value = formattedValue;
        });

        // Format expiry date input
        document.getElementById('expiryDate').addEventListener('input', function (e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });

        // Only allow numbers for CVV
        document.getElementById('cvv').addEventListener('input', function (e) {
            e.target.value = e.target.value.replace(/[^0-9]/g, '');
        });

        // Handle form submission
        document.getElementById('paymentForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const errorDiv = document.getElementById('errorMessage');
            const loadingDiv = document.getElementById('loadingDiv');
            const paymentBtn = document.getElementById('paymentBtn');
            const form = e.target;

            // Hide previous errors
            errorDiv.style.display = 'none';

            // Validate form
            if (!validateForm()) {
                return;
            }

            // Show loading
            form.style.display = 'none';
            loadingDiv.style.display = 'block';
            paymentBtn.disabled = true;

            try {
                // Collect form data
                const formData = new FormData(form);
                const cardData = {
                    cardNumber: formData.get('cardNumber').replace(/\s/g, ''),
                    cardName: formData.get('cardName'),
                    expiryDate: formData.get('expiryDate'),
                    cvv: formData.get('cvv'),
                    billingAddress: formData.get('billingAddress')
                };

                // Process payment
                const response = await fetch('/subscription/process-payment', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        ...paymentData,
                        cardData
                    })
                });

                const result = await response.json();

                if (result.success) {
                    // Payment successful
                    setTimeout(() => {
                        if (result.redirectTo) {
                            window.location.href = result.redirectTo;
                        } else {
                            alert('Payment successful! Your subscription has been activated.');
                            window.location.href = '/signin?message=subscription-success';
                        }
                    }, 2000);
                } else {
                    // Payment failed
                    throw new Error(result.message || 'Payment failed');
                }

            } catch (error) {
                console.error('Payment error:', error);

                // Hide loading and show form
                loadingDiv.style.display = 'none';
                form.style.display = 'block';
                paymentBtn.disabled = false;

                // Show error
                errorDiv.textContent = error.message || 'Payment failed. Please try again.';
                errorDiv.style.display = 'block';
            }
        });

        function validateForm() {
            const cardNumber = document.getElementById('cardNumber').value.replace(/\s/g, '');
            const expiryDate = document.getElementById('expiryDate').value;
            const cvv = document.getElementById('cvv').value;

            // Basic validation
            if (cardNumber.length < 13 || cardNumber.length > 19) {
                showError('Please enter a valid card number');
                return false;
            }

            if (!/^\d{2}\/\d{2}$/.test(expiryDate)) {
                showError('Please enter a valid expiry date (MM/YY)');
                return false;
            }

            if (cvv.length < 3 || cvv.length > 4) {
                showError('Please enter a valid CVV');
                return false;
            }

            return true;
        }

        function showError(message) {
            const errorDiv = document.getElementById('errorMessage');
            errorDiv.textContent = message;
            errorDiv.style.display = 'block';
        }
    </script>
</body>

</html>