<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Collabs - CollabSync</title>
  <link rel="stylesheet" href="/B2_index/B2_collab.css">
</head>

<body>
  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">CollabSync</div>
      <nav>
        <ul>
          <li><a href="/brand/home">Home</a></li>
          <li><a href="/brand/explore">Explore Influencers</a></li>
          <li><a href="/brand/profile">My Brand Profile</a></li>
          <!-- <li><a href="logout">Logout</a></li> -->
        </ul>
      </nav>
    </div>
  </header>

  <!-- Sidebar Navigation (Right Side) -->
  <button class="toggle-btn" onclick="openMenu()">â˜°</button>
  <div class="menu" id="navMenu">
    <span class="close-btn" onclick="closeMenu()">&times;</span>
    <a href="/brand/collab">Collabs</a>
    <a href="/brand/recievedRequests">Collab requests</a>
    <a href="/brand/create_collab">Create Collab</a>
    <a href="/brand/create_offer">Create Offer</a>
    <a href="/brand/signout">Sign Out</a>
  </div>

  <!-- Main Content -->
  <div class="container">
    <input type="text" class="search-bar" placeholder="Search for collabs...">
    <div class="collab-list">
      <% if (collabs && collabs.length> 0) { %>
        <% collabs.forEach(collab=> { %>
          <div class="collab-box">
            <div class="collab-title">
              <%= collab.title || 'Untitled Campaign' %>
                <span class="status-badge <%= collab.status %>">
                  <%= collab.status %>
                </span>
            </div>
            <div class="bottom-row">
              <!-- Left Column: Blue Box with Attributes + Extra Sentence -->
              <div class="left-col">
                <div class="blue-box">
                  <span class="attr">By:</span> <span class="value">
                    <%= collab.brand_name || 'Unknown Brand' %>
                  </span><br>
                  <span class="attr">Target Audience:</span> <span class="value">
                    <%= collab.influence_regions || 'Not specified' %>
                  </span><br>
                  <span class="attr">Categories:</span> <span class="value">
                    <%= collab.interests || 'Not specified' %>
                  </span><br>
                  <span class="attr">Budget:</span> <span class="value">
                    <%= collab.pay_per_post || 'Not specified' %>
                  </span><br>
                  <span class="attr">Duration:</span> <span class="value">
                    <%= collab.duration %> days
                  </span>
                </div>
                <div class="offer-sentence">
                  <%= collab.offer_sentence || 'No description available' %>
                </div>
              </div>
              <!-- Right Column: Red Box with Requirements -->
              <div class="red-col">
                <div class="collab-requirements">
                  <h3>Requirements:</h3>
                  <p>
                    <span class="attr">Channels:</span> <span class="value">
                      <%= collab.channels || 'Not specified' %>
                    </span><br>
                    <span class="attr">Minimum Followers:</span> <span class="value">
                      <%= collab.min_followers || 'Not specified' %>
                    </span><br>
                    <span class="attr">Age Group:</span> <span class="value">
                      <%= collab.age_group || 'Not specified' %>
                    </span><br>
                    <span class="attr">Objectives:</span> <span class="value">
                      <%= collab.objectives || 'Not specified' %>
                    </span>
                  </p>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
            <% } else { %>
              <div class="no-collabs-message" style="text-align: center; padding: 20px;">
                <h2>No campaigns found</h2>
                <p>You haven't created any campaigns yet. Click "Create Campaign" to get started!</p>
              </div>
              <% } %>
    </div>
  </div>

  <!-- This script handles the sidebar toggle. -->
  <script>
    function openMenu() {
      document.getElementById("navMenu").style.width = "250px";
    }
    function closeMenu() {
      document.getElementById("navMenu").style.width = "0";
    }
  </script>

</body>

</html>