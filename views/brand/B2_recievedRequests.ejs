<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Received Requests - CollabSync</title>
  <link rel="stylesheet" href="/B2_index/B2_recievedRequests.css">
</head>

<body>
  <!-- Header -->
  <header>
    <div class="header-container">
      <div class="logo">CollabSync</div>
      <nav>
        <ul>
          <li><a href="/brand/home">Home</a></li>
          <li><a href="/brand/explore">Explore Influencers</a></li>
          <li><a href="/brand/profile">My Brand Profile</a></li>
          <!-- <li><a href="logout">Logout</a></li> -->
        </ul>
      </nav>
    </div>
  </header>

  <!-- Sidebar Navigation (Right Side) -->
  <button class="toggle-btn" onclick="openMenu()">â˜°</button>
  <div class="menu" id="navMenu">
    <span class="close-btn" onclick="closeMenu()">&times;</span>
    <!-- <a href="/I_explore">Brands</a> //////////////////////////////////////////////////////////////////////////////////////////////////////-->
    <a href="/brand/collab">Collabs</a>
    <a href="/brand/recievedRequests">Collab requests</a>
    <a href="/brand/create_collab">Create Collab</a>
    <a href="/">Sign Out</a>
    <!-- <a href="#">Settings</a> -->
  </div>

  <!-- Main Content -->
  <div class="container">
    <input type="text" class="search-bar" placeholder="Search for collabs...">
    <div class="collab-list">
      <!-- Dynamically render requests -->
      <% requests.forEach(request => { %>
        <div class="collab-box">
          <div class="collab-title">
            <%= request.collab_title %>
          </div>
          <div class="bottom-row">
            <!-- Left Column: Influencer Details -->
            <div class="left-col">
              <div class="blue-box">
                <h3>Influencer Details:</h3>
                <p>
                  <span class="attr">Name:</span> <span class="value"><%= request.influencer_name %></span><br>
                  <span class="attr">Channels:</span> <span class="value"><%= request.influencer_channels %></span><br>
                  <span class="attr">Followers:</span> <span class="value"><%= request.followers %></span><br>
                  <span class="attr">Engagement Rate:</span> <span class="value"><%= request.engagement_rate %></span>
                </p>
              </div>
            </div>
            <!-- Right Column: Collab Requirements -->
            <div class="red-col">
              <div class="collab-requirements">
                <h3>Collab Requirements:</h3>
                <p>
                  <span class="attr">Channels:</span> <span class="value"><%= request.required_channels %></span><br>
                  <span class="attr">Minimum Followers:</span> <span class="value"><%= request.min_followers %></span><br>
                  <span class="attr">Age Group:</span> <span class="value"><%= request.age_group %></span><br>
                  <span class="attr">Genders:</span> <span class="value"><%= request.genders %></span>
                </p>
                <a href="/B2_transationp" class="view-btn">Accept and Proceed</a>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Sidebar Toggle Script -->
  <script>
    function openMenu() {
      document.getElementById("navMenu").style.width = "250px";
    }
    function closeMenu() {
      document.getElementById("navMenu").style.width = "0";
    }
  </script>
</body>

</html>