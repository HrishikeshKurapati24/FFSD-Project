        }

        .campaign-stats .stat label {
            font-size: 12px;
            color: #777;
        }

        /* Sidebar styles */
        .social-stats {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .social-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            border-radius: 8px;
            background: #f8f9fa;
