<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= influencer.displayName %> - CollabSync
    </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/B2_index/influencer_details.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="profile-header">
        <div class="profile-content">
            <a href="#" class="back-button" onclick="handleBack(event)" aria-label="Go back">
                <i class="fas fa-arrow-left"></i> Go Back
            </a>
            <div class="profile-header-content">
                <img src="<%= influencer.profilePicUrl %>" alt="<%= influencer.displayName %>" class="profile-pic">
                <div class="profile-info">
                    <h1 class="profile-name">
                        <%= influencer.displayName || influencer.fullName || 'Unknown Influencer' %>
                            <% if (influencer.verified) { %>
                                <i class="fas fa-check-circle" style="color: #1DA1F2;"></i>
                                <% } %>
                    </h1>
                    <p class="profile-username">@<%= influencer.username || 'unknown' %>
                    </p>
                    <p class="profile-bio">
                        <%= influencer.bio || 'No bio available' %>
                    </p>
                    <div class="profile-stats">
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (influencer.totalFollowers || 0).toLocaleString() %>
                            </div>
                            <div class="stat-label">Total Followers</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (influencer.avgEngagementRate || 0).toFixed(1) %>%
                            </div>
                            <div class="stat-label">Avg. Engagement</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= influencer.completedCollabs || 0 %>
                            </div>
                            <div class="stat-label">Completed Collabs</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                <%= (influencer.rating || 0).toFixed(1) %>
                            </div>
                            <div class="stat-label">Rating</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="profile-content">
        <div class="profile-details">
            <div class="main-content">
                <div class="detail-card">
                    <h2 class="card-title">Social Media Platforms</h2>
                    <div class="social-platforms">
                        <% if (influencer.socials && influencer.socials.length> 0) { %>
                            <% influencer.socials.forEach(social=> { %>
                                <div class="platform-card">
                                    <div class="platform-header">
                                        <div
                                            class="platform-icon <%= (social.platform || 'default').toLowerCase() %>-bg">
                                            <i class="fab fa-<%= social.icon || 'link' %>"></i>
                                        </div>
                                        <div class="platform-name">
                                            <%= social.name || social.platform || 'Unknown Platform' %>
                                        </div>
                                    </div>
                                    <div class="platform-stats">
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.followers || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Followers</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgLikes || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Likes</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgComments || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Comments</div>
                                        </div>
                                        <div class="stat-box">
                                            <div class="stat-box-value">
                                                <%= (social.avgViews || 0).toLocaleString() %>
                                            </div>
                                            <div class="stat-box-label">Avg. Views</div>
                                        </div>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No social media platforms connected</p>
                                        <% } %>
                    </div>
                </div>

                <div class="detail-card">
                    <h2 class="card-title">Best Posts</h2>
                    <div class="best-posts">
                        <% if (influencer.bestPosts && influencer.bestPosts.length> 0) { %>
                            <% influencer.bestPosts.forEach(post=> { %>
                                <div class="post-card">
                                    <div class="post-details">
                                        <div class="post-platform">
                                            <i class="fab fa-<%= (post.platform || 'link').toLowerCase() %>"></i>
                                            <%= post.platform || 'Unknown Platform' %>
                                        </div>
                                        <div class="post-stats">
                                            <span><i class="fas fa-heart"></i>
                                                <%= (post.likes || 0).toLocaleString() %>
                                            </span>
                                            <span><i class="fas fa-comment"></i>
                                                <%= (post.comments || 0).toLocaleString() %>
                                            </span>
                                            <% if (post.views) { %>
                                                <span><i class="fas fa-eye"></i>
                                                    <%= (post.views || 0).toLocaleString() %>
                                                </span>
                                                <% } %>
                                        </div>
                                        <% if (post.url) { %>
                                            <a href="<%= post.url %>" target="_blank" class="post-link">View Post</a>
                                            <% } %>
                                    </div>
                                </div>
                                <% }); %>
                                    <% } else { %>
                                        <p>No best posts available</p>
                                        <% } %>
                    </div>
                </div>
            </div>

            <div class="side-content">
                <div class="detail-card">
                    <h2 class="card-title">Audience Demographics</h2>
                    <div class="audience-section">
                        <div class="audience-stats">
                            <div class="audience-stat">
                                <div class="audience-stat-value">
                                    <%= influencer.audienceDemographics?.gender || 'Not specified' %>
                                </div>
                                <div class="audience-stat-label">Primary Gender</div>
                            </div>
                            <div class="audience-stat">
                                <div class="audience-stat-value">
                                    <%= influencer.audienceDemographics?.ageRange || 'Not specified' %>
                                </div>
                                <div class="audience-stat-label">Age Range</div>
                            </div>
                        </div>
                    </div>

                    <div class="performance-metrics">
                        <h3>Performance Metrics</h3>
                        <div class="metric-grid">
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (influencer.performanceMetrics?.reach || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Reach</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (influencer.performanceMetrics?.impressions || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Impressions</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (influencer.performanceMetrics?.engagement || 0).toLocaleString() %>
                                </div>
                                <div class="metric-label">Engagement</div>
                            </div>
                            <div class="metric-card">
                                <div class="metric-value">
                                    <%= (influencer.performanceMetrics?.conversionRate || 0).toFixed(1) %>%
                                </div>
                                <div class="metric-label">Conversion Rate</div>
                            </div>
                        </div>
                    </div>

                    <div class="categories-section">
                        <h3>Categories</h3>
                        <div class="category-tags">
                            <% if (influencer.categories && influencer.categories.length> 0) { %>
                                <% influencer.categories.forEach(category=> { %>
                                    <span class="category-tag">
                                        <%= category %>
                                    </span>
                                    <% }); %>
                                        <% } else { %>
                                            <p>No categories specified</p>
                                            <% } %>
                        </div>
                    </div>

                    <div class="languages-section">
                        <h3>Languages</h3>
                        <div class="language-tags">
                            <% if (influencer.languages && influencer.languages.length> 0) { %>
                                <% influencer.languages.forEach(language=> { %>
                                    <span class="language-tag">
                                        <%= language %>
                                    </span>
                                    <% }); %>
                                        <% } else { %>
                                            <p>No languages specified</p>
                                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function handleBack(e) {
            e.preventDefault();
            const ref = document.referrer;
            if (ref && new URL(ref, window.location.origin).origin === window.location.origin) {
                window.location.href = ref;
                return;
            }
            if (window.history.length > 1) {
                window.history.back();
                return;
            }
            window.location.href = '/brand/home';
        }
    </script>
</body>

</html>