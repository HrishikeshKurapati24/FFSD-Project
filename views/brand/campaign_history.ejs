<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campaign History - CollabSync</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/i_index/brand_campaign_history.css">
</head>

<body>
    <!-- Header -->
    <header>
        <div class="header-container">
            <div class="logo">CollabSync</div>
            <nav>
                <ul>
                    <li><a href="/brand/home">Home</a></li>
                    <li><a href="/brand/explore">Explore Influencers</a></li>
                    <li><a href="/brand/profile">My Brand Profile</a></li>
                </ul>
            </nav>
        </div>
    </header>

    <!-- Sidebar Navigation -->
    <button class="toggle-btn" onclick="openMenu()">â˜°</button>
    <div class="menu" id="navMenu">
        <span class="close-btn" onclick="closeMenu()">&times;</span>
        <a href="/brand/recievedRequests">Collab Requests</a>
        <a href="/brand/create_collab">Create Collab</a>
        <a href="/brand/signout">Sign Out</a>
    </div>

    <!-- Main Content -->
    <div class="container">
        <div class="campaigns-header">
            <h1>Campaign History</h1>
            <p>View and analyze your past campaign performances</p>
        </div>

        <!-- Campaigns Grid -->
        <div class="campaigns-grid">
            <% if (campaigns && campaigns.length> 0) { %>
                <% campaigns.forEach(campaign=> { %>
                    <div class="campaign-card">
                        <span class="campaign-status status-completed">
                            <%= campaign.status %>
                        </span>
                        <h3>
                            <%= campaign.title %>
                        </h3>
                        <p>
                            <%= campaign.description %>
                        </p>

                        <div class="campaign-metrics">
                            <div class="metric">
                                <span class="metric-value">
                                    <%= campaign.performance_score.toFixed(1) %>
                                </span>
                                <span class="metric-label">Performance</span>
                            </div>
                            <div class="metric">
                                <span class="metric-value">
                                    <%= campaign.engagement_rate.toFixed(1) %>%
                                </span>
                                <span class="metric-label">Engagement</span>
                            </div>
                            <div class="metric">
                                <span class="metric-value">
                                    <%= campaign.reach.toLocaleString() %>
                                </span>
                                <span class="metric-label">Reach</span>
                            </div>
                        </div>

                        <div class="campaign-details">
                            <div class="detail-item">
                                <i class="far fa-calendar"></i>
                                <span>Ended <%= new Date(campaign.end_date).toLocaleDateString() %></span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-users"></i>
                                <span>
                                    <%= campaign.influencers_count %> influencers
                                </span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-tag"></i>
                                <span>
                                    <%= campaign.budget.toLocaleString() %> budget
                                </span>
                            </div>
                            <div class="detail-item">
                                <i class="fas fa-chart-line"></i>
                                <span>
                                    <%= campaign.conversion_rate %>% conversion
                                </span>
                            </div>
                        </div>

                        <% if (campaign.influencers && campaign.influencers.length> 0) { %>
                            <div class="campaign-influencers">
                                <h4>Influencers</h4>
                                <div class="influencer-list">
                                    <% campaign.influencers.forEach(influencer=> { %>
                                        <a class="influencer-tag" href="/brand/influencer_details/<%= influencer.id %>">
                                            <img src="<%= influencer.profilePicUrl || '/images/default-avatar.jpg' %>"
                                                alt="<%= influencer.name %>">
                                            <span>
                                                <%= influencer.name %>
                                            </span>
                                        </a>
                                        <% }); %>
                                </div>
                            </div>
                            <% } %>
                    </div>
                    <% }); %>
                        <% } else { %>
                            <div class="no-campaigns">
                                <i class="fas fa-history"></i>
                                <h3>No Campaign History</h3>
                                <p>You haven't completed any campaigns yet.</p>
                            </div>
                            <% } %>
        </div>
    </div>

    <script>
        // Initialize all event listeners when the DOM is loaded
        document.addEventListener('DOMContentLoaded', function () {
            // Menu toggle functions
            window.openMenu = function () {
                const menu = document.getElementById("navMenu");
                if (menu) {
                    menu.style.width = "250px";
                }
            };

            window.closeMenu = function () {
                const menu = document.getElementById("navMenu");
                if (menu) {
                    menu.style.width = "0";
                }
            };

            // Close menu when clicking outside
            document.addEventListener('click', function (e) {
                const menu = document.getElementById('navMenu');
                const toggleBtn = document.querySelector('.toggle-btn');
                if (menu && toggleBtn && !menu.contains(e.target) && !toggleBtn.contains(e.target)) {
                    menu.style.width = "0";
                }
            });
        });
    </script>
</body>

</html>